@model List<Planiranje.Models.Ucenici.Nastavnik_uvid>
@using Planiranje.Models.Ucenici
@{
    Layout = null;
    Nastavnik nas = ViewBag.nastavnik as Nastavnik;
}
<p></p>
<div class="panel-body">
    <div class="row">
        <div class="col-lg-12">
            <div class="table-responsive">
                <div class="col-lg-10">
                    <div class="col-lg-2">
                        <p>
                            <a onclick="showModal('@Url.Action("NoviUvid","NastavnikUvid",new { idNastavnik=nas.Id, godina=ViewBag.godina, id=0})')" class="btn btn-primary btn-xs btn-grad">Novi uvid</a>
                        </p>
                    </div>
                    <b>Odabrani učitelj/nastavnik:</b> @nas.ImePrezime
                </div>

                <table class="table table-striped table-bordered table-hover" id="dataTable">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Razredni odjel</th>
                            <th>Datum</th>
                            <th>Vrijeme</th>
                            <th>Nastavni predmet</th>
                            <th>Aktivnost</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ int brojac = 0;
                            List<RazredniOdjel> odjeli = ViewBag.listaodjela as List<RazredniOdjel>;
                        }
                        @foreach (var item in Model)
                        {
                            brojac++;
                            RazredniOdjel odjel = odjeli.SingleOrDefault(s => s.Id == item.Id_odjel);
                            <tr>
                                <td class="col-md-1">@brojac</td>
                                <td class="col-md-2">@odjel.Naziv</td>
                                <td class="col-md-2">@item.Datum.ToShortDateString()</td>
                                <td class="col-md-1">@item.Vrijeme.ToShortTimeString()</td>
                                <td class="col-md-4">@item.Nastavni_predmet</td>
                                <td class="col-md-2">
                                    <a target="_blank" href="@Url.Action("Ispis","NastavnikUvid",new { id=item.Id})" class="btn btn-info btn-xs btn-grad">Ispis</a>
                                    <a onclick="showModal('@Url.Action("NoviUvid","NastavnikUvid",new { idNastavnik=0, godina=0, id=item.Id})')" class="btn btn-primary btn-xs btn-grad">Uredi</a>
                                    <a onclick="showModal('@Url.Action("ObrisiUvid","NastavnikUvid", new { id=item.Id})')" class="btn btn-danger btn-xs btn-grad">Obriši</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div><!--END COL 12 -->
    </div>
</div>



