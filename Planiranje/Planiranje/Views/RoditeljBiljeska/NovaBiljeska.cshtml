@model Planiranje.Models.Ucenici.Roditelj_biljeska
@using Planiranje.Models.Ucenici
@{
    Layout = null;
}
<div class="panel-body">
    <div class="row">
        <div class="col-lg-6">
            <div class="form-group">
                <label for="text1" class="control-label">Naziv dokumenta</label>
                <input type="text" id="text1" placeholder="Naziv dokumenta" class="form-control" />
            </div>
        </div><!--END COL 6-->
        <div class="col-lg-6">
            <div class="form-group left">
                <label for="text1" class="control-label">Ime i prezime roditelja/skrbnika</label>
                <input type="text" id="text1" placeholder="Ime i prezime" class="form-control" />
            </div>
        </div>
    </div><!--END ROW -->
    <div class="row">
        <div class="col-lg-12">
            <div class="form-group left">
                <label for="text1" class="control-label">MJESEČNA BILJEŠKA / ZAKLJUČAK </label>
            </div>
            <div class="panel-body">
                <ul class="nav nav-tabs small">
                    <li class="active">
                        <a href="#biljeska1" data-toggle="tab">RUJAN - SIJEČANJ</a>
                    </li>
                    <li>
                        <a href="#biljeska2" data-toggle="tab">VELJAČA - LIPANJ</a>
                    </li>
                    <li>
                        <a href="#ostalo" data-toggle="tab">Ostala zapažanja</a>
                    </li>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane fade in active" id="biljeska1">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label for="text1" class="control-label col-lg-3">Rujan</label>
                                    <textarea class="form-control" rows="3"></textarea>
                                </div><!--END form-group -->
                                <div class="form-group">
                                    <label for="text1" class="control-label col-lg-3">Listopad</label>
                                    <textarea class="form-control" rows="3"></textarea>
                                </div><!--END form-group -->
                                <div class="form-group">
                                    <label for="text1" class="control-label col-lg-3">Studeni</label>
                                    <textarea class="form-control" rows="3"></textarea>
                                </div><!--END form-group -->
                            </div><!--END COL -->
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label for="text1" class="control-label col-lg-3">Prosinac</label>
                                    <textarea class="form-control" rows="3"></textarea>
                                </div><!--END form-group -->
                                <div class="form-group">
                                    <label for="text1" class="control-label col-lg-3">Siječanj</label>
                                    <textarea class="form-control" rows="3"></textarea>
                                </div><!--END form-group -->
                                <div class="form-group">
                                    <label for="text1" class="control-label col-lg-3">Zaključci</label>
                                    <textarea class="form-control" rows="3"></textarea>
                                </div><!--END form-group -->
                            </div><!--END COL -->
                        </div><!--END ROW -->
                    </div>
                    <div class="tab-pane fade" id="biljeska2">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label for="text1" class="control-label col-lg-3">Veljača</label>
                                    <textarea class="form-control" rows="3"></textarea>
                                </div><!--END form-group -->
                                <div class="form-group">
                                    <label for="text1" class="control-label col-lg-3">Ožujak</label>
                                    <textarea class="form-control" rows="3"></textarea>
                                </div><!--END form-group -->
                                <div class="form-group">
                                    <label for="text1" class="control-label col-lg-3">Travanj</label>
                                    <textarea class="form-control" rows="3"></textarea>
                                </div><!--END form-group -->
                            </div><!--END COL -->
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label for="text1" class="control-label col-lg-3">Svibanj</label>
                                    <textarea class="form-control" rows="3"></textarea>
                                </div><!--END form-group -->
                                <div class="form-group">
                                    <label for="text1" class="control-label col-lg-3">Lipanj</label>
                                    <textarea class="form-control" rows="3"></textarea>
                                </div><!--END form-group -->
                                <div class="form-group">
                                    <label for="text1" class="control-label col-lg-3">Zaključci</label>
                                    <textarea class="form-control" rows="3"></textarea>
                                </div><!--END form-group -->
                            </div><!--END COL -->
                        </div><!--END ROW -->
                    </div>
                    <div class="tab-pane fade" id="ostalo">
                        <div class="row">
                            <div class="col-lg-10">
                                <div class="form-group">
                                    <label for="text1" class="control-label col-lg-3">Ostala zapažanja</label>
                                    <textarea class="form-control" rows="8"></textarea>
                                </div><!--END form-group -->
                            </div><!--END COL -->
                            <div class="col-lg-2">
                            </div><!--END COL -->
                        </div><!--END ROW -->
                    </div><!--END TAB-->
                </div>
            </div><!--END PANEL-->
            <div class="form-group">
                <label for="text4" class="control-label col-lg-1"></label>
                <div class="col-lg-6">
                    <button type="submit" class="btn btn-default">Potvrdi</button>
                    <button type="reset" class="btn btn-default">Odustani</button>
                </div>
            </div>
        </div><!--END COL 12-->
    </div><!--END ROW -->
</div>

