@model Planiranje.Models.Ucenici.Roditelj_biljeska
@{
    Layout = null;
}

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">Brisanje bilješke o roditelju</h4>
        </div>
        @using (Html.BeginForm(null, null, new { @id = string.Empty }, FormMethod.Post, new { @id = "obrisiBiljeska", @class = "form-horizontal", role = "form" }))
        {
            @Html.HiddenFor(model => model.Id)                       
            <div class="modal-body">
                <p><b>Jeste li sigurni da želite obrisati ovu bilješku?</b></p>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.Naslov, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.Naslov, new { @class = "form-control", disabled = "" })                        
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Id_roditelj, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @*@Html.DropDownListFor(model => model.Mjesec, ViewBag.mjeseci as List<SelectListItem>, "Odaberite mjesec", new { @class = "form-control", disabled = "" })*@
                        @Html.TextBox(" ", ViewBag.ime as string, new { @class = "form-control", disabled = "" })
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Odustani</button>
                    <input type="button" class="btn btn-danger" value="Obriši" onclick='zatvoriModal("@Url.Action("ObrisiBiljeska","RoditeljBiljeska")","#obrisiBiljeska","#detalji","Bilješka je obrisana")' />
                </div>
            </div>
        }
    </div>
</div>
