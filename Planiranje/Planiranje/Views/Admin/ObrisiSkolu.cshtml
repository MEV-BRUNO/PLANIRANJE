@model Planiranje.Models.Ucenici.Pedagog_skola
    @using Planiranje.Models
@{
    Layout = null;
    Pedagog pedagog = ViewBag.pedagog as Pedagog;
    Skola skola = ViewBag.skola as Skola;
}

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">Brisanje škole za pedagoga</h4>
        </div>
        @using (Html.BeginForm(null, null, new { @id = string.Empty }, FormMethod.Post, new { @id = "obrisiSkolu", @class = "form-horizontal", role = "form" }))
        {
            <div class="modal-body">
                @Html.HiddenFor(model => model.Id)
                <div class="form-group">
                    <div class="col-md-10">
                        <h5>
                            Jeste li sigurni da želite obrisati školu <b>@skola.Naziv, @skola.Grad</b> za pedagoga <b>@pedagog.Ime @pedagog.Prezime, @pedagog.Email</b>
                        </h5>
                    </div>
                </div>                
                <div class="modal-footer">
                    <div class="form-group">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Odustani</button>
                        <input type="button" onclick="reload('@Url.Action("ObrisiSkolu","Admin")','#obrisiSkolu')" class="btn btn-danger" value="Obriši" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>
