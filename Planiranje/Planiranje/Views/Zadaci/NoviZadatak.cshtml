@model Planiranje.Models.ZadaciModel

@{
    Layout = null;
}
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">Novi zadatak</h4>

        </div>
        @using (Html.BeginForm(null, null, new { @id = string.Empty }, FormMethod.Post, new { @id = "noviZadatakView", @class = "form-horizontal", role = "form" }))
        {
            <div class="modal-body">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.zadatak.ID_zadatak, new { Value = 0 })
            <div class="form-group">
                @Html.LabelFor(model => model.zadatak.Naziv, htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.TextAreaFor(model => model.zadatak.Naziv,new { @class = "edit-opis", @id = "newName",
				   onkeydown = "hideModalA(event, \"/Zadaci/NoviZadatak\", \"#noviZadatakView\", \"Novi zadatak je uspješno spremljen!\")"
			   })
                    @Html.ValidationMessageFor(model => model.zadatak.Naziv, "", new { @class = "text-danger" })
                </div>
            </div>
			<div class="modal-footer">
				<button type="button" class="btn btn-default" data-dismiss="modal">Odustani</button>
				<input type="button" class="btn btn-primary" value="Spremi" onclick='hideModal("/Zadaci/NoviZadatak", "#noviZadatakView", "Novi zadatak je uspješno spremljen!")' />
			</div>
        </div>
    }
    </div>
</div>
