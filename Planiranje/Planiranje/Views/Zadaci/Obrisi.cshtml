@model Planiranje.Models.ZadaciModel

@{
    Layout = null;
}

<div class="modal-dialog">
	<div class="modal-content">
		<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
			<h4 class="modal-title">Brisanje podatka</h4>
		</div>
		@using (Html.BeginForm(null, null, new { @id = string.Empty }, FormMethod.Post, new { @id = "obrisiZadatakView", @class = "form-horizontal", role = "form" }))
        {
            <div class="modal-body">
            @Html.HiddenFor(model => model.zadatak.ID_zadatak)
            <div class="form-group">
				<div class="col-md-10">
				@if (ViewBag.ErrorMessage == null)
				{
				<h5>
					Jeste li sigurni da želite obrisati "@Html.DisplayFor(model => model.zadatak.Naziv, new { htmlAttributes = new { @class = "form-control" } })"?
				</h5>
				}
				else
				{
					@ViewBag.ErrorMessage;
				}
				</div>
            </div>
            <div class="modal-footer">
				<div class="form-group">
					<button type="button" class="btn btn-default" data-dismiss="modal">Odustani</button>
					@if (ViewBag.ErrorMessage == null)
					{
						<input type="button" class="btn btn-danger" value="Obriši" onclick='hideModal("/Zadaci/Delete", "#obrisiZadatakView", "Zadatak uspješno obrisan!")' />
					}
				</div>
            </div>
        </div>
    }
    </div>
</div>
