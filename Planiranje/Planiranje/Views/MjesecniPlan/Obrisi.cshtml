@model Planiranje.Models.Mjesecni_plan

@{
	Layout = null;
}


<div class="modal-dialog">
	<div class="modal-content">
		<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
			<h4 class="modal-title">Brisanje podatka</h4>
		</div>
		@using (Ajax.BeginForm("Delete", "MjesecniPlan", new { id = Model.ID_plan }, new AjaxOptions
		{
			HttpMethod = "Post",
			OnSuccess = "DeleteSuccess"

		}, new { @class = "form-horizontal", role = "form" }))
		{
			<div class="modal-body">
				<div class="form-horizontal">
					@Html.HiddenFor(model => model.ID_plan)
					<div class="form-group">
						@Html.Display("Grad:", new { htmlAttributes = new { @class = "form-control" } })
						<div class="col-md-10">
							@Html.DisplayFor(model => model.Naziv, new { htmlAttributes = new { @class = "form-control" } })
						</div>
					</div>
					<div class="form-group">
						<div class="col-md-10">
							<h4>Da li želite obrisati podatak?</h4>
						</div>
					</div>
					<div class="modal-footer">
						<div class="form-group">
							<div class="col-md-offset-2 col-md-10">
								<input type="submit" class="btn btn-primary" value="Potvrdi" />
								<button type="button" class="btn btn-default" data-dismiss="modal">Odustani</button>
							</div>
						</div>
					</div>
				</div>
			</div>
		}
	</div>
</div>
