@model Planiranje.Models.MjesecniModel

@{
    Page.Title = "Pregled detalja za mjesečni plan";
    Layout = Request.IsAjaxRequest() ? null : "~/Views/Shared/_Layout.cshtml";
}
@if (TempData["poruka"] != null)
{
    <div id="poruka" style="display:none">1</div>
}
<div class="inner">
    <div class="row">
        <div class="col-lg-12">
            <h4> Pregled mjesečnih detalja za plan: <b>@Model.MjesecniPlan.Naziv</b></h4>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-lg-2">
                            <div class="pull-left">
                                @{ int god = Model.MjesecniPlan.Ak_godina + 1;}
                                <p>Školska godina:</p> <b>@Model.MjesecniPlan.Ak_godina./@god.</b>
                            </div>
                        </div><!--END COL 2-->
                        <div class="col-lg-8">

                        </div>
                        <div class="col-lg-2 pull-right">
                            <button class="btn btn-success btn-sm">ISPIS</button>
                        </div>

                    </div><!--END ROW -->
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <p>
                                <a onclick="showModal('@Url.Action("NoviDetalji","MjesecniPlan",new { idPlan=Model.MjesecniPlan.ID_plan})')" class="btn btn-primary btn-xs btn-grad"> Novi detalj</a>
                            </p>
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover" id="dataTable">
                                    <thead>
                                        <tr>
                                            <th>Područje<br />rada</th>
                                            <th>Subjekt<br />rada</th>
                                            <th>Aktivnosti/<br>Sadržaj</th>
                                            <th>Suradnici</th>
                                            <th>Vrijeme<br> ostvarenja</th>
                                            <th>Br. sati</th>
                                            <th>Bilješke</th>
                                            <th>Aktivnost</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.MjesecniDetalji)
                                        {
                                            <tr>
                                                <td class="col-md-2">@item.Podrucje</td>
                                                <td class="col-md-1">-</td>
                                                <td class="col-md-2">@item.Aktivnost</td>
                                                <td class="col-md-1">@item.Suradnici</td>
                                                <td class="col-md-2">@item.Vrijeme </td>
                                                <td class="col-md-1">@item.Br_sati</td>
                                                <td class="col-md-2">@item.Biljeska</td>
                                                <td class="col-md-1">
                                                    <a href="#" class="btn btn-primary btn-xs btn-grad">Uredi</a>
                                                    <a href="#" class="btn btn-danger btn-xs btn-grad">Obriši</a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div><!--END COL 3-->
                        <div class="col-lg-1">
                        </div>
                    </div><!--END ROW -->
                </div>
            </div>

        </div>

    </div>
</div>



<script>
    $(document).ready(function () {
        $('#dataTable').dataTable();
        if ($("#poruka").text() == "1") {
            showSnackBar('@TempData["poruka"]');
        }
    });
</script>
