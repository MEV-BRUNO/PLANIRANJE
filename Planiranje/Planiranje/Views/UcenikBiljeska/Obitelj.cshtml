@model Planiranje.Models.Ucenici.UcenikBiljeskaModel
@{
    Layout = null;
}

<h4>Podaci o obitelji</h4>
@*<p>
    <a href="#" class="btn btn-primary btn-xs btn-grad"> Novi član obitelji</a>
</p>*@
<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover" id="dataTable1">
        <thead>
            <tr>
                <th>#</th>
                <th>Prezime i ime</th>
                <th>Svojstvo</th>
                <th>Adresa</th>
                <th>Kontakt</th>
                <th>Zanimanje</th>                
            </tr>
        </thead>
        <tbody>
            @{ int brojac = 0;}
            @foreach (var item in Model.ListaObitelji)
            {
                brojac++;
            <tr>
                <td class="col-md-1">@brojac</td>
                <td class="col-md-2">@item.ImePrezime</td>
                <td class="col-md-1">@item.Svojstvo</td>
                <td class="col-md-2">@item.Adresa</td>
                <td class="col-md-2">@item.Kontakt</td>
                <td class="col-md-2">@item.Zanimanje</td>                
            </tr>   
            }
        </tbody>
    </table>
</div>
