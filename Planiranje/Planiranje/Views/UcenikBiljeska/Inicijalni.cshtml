@model Planiranje.Models.Ucenici.UcenikBiljeskaModel
@{
    Layout = null;
}
@using (Html.BeginForm(null, null, new { @id = string.Empty }, FormMethod.Post, new { @id = "inicijalniPodaci", @class = "form-horizontal", role = "form" }))
{
    @Html.HiddenFor(model => model.UcenikBiljeska.Id_biljeska)
    @Html.HiddenFor(model => model.UcenikBiljeska.Id_ucenik_razred)
    <div class="form-group">
        @Html.LabelFor(model => model.UcenikBiljeska.Inicijalni_podaci, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-lg-10">
            @*<textarea id="limiter" rows="10" placeholder="Inicijalni podaci o učeniku" class="form-control"></textarea>*@
            @Html.TextAreaFor(model => model.UcenikBiljeska.Inicijalni_podaci, new { @class = "form-control", rows="10" })
        </div>
    </div>
    <div class="form-group">
        <label for="text4" class="control-label col-lg-2"></label>
        <div class="col-lg-6">
            <button type="button" onclick="potvrdi('@Url.Action("PromjenaInicijalni","UcenikBiljeska")','#inicijalniPodaci','Spremljeno')" class="btn btn-success">Potvrdi</button>
            <button type="button" onclick="odustani('@Url.Action("Inicijalni","UcenikBiljeska", new { id=Model.UcenikBiljeska.Id_biljeska})','#inicijalni')" class="btn btn-default">Odustani</button>
        </div>
    </div>
}
