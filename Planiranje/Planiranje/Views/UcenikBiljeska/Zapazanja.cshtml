@model Planiranje.Models.Ucenici.UcenikBiljeskaModel
@{
    Layout = null;
}

@using (Html.BeginForm(null, null, new { @id = string.Empty }, FormMethod.Post, new { @id = "zapazanjaForm", @class = "form-horizontal", role = "form" }))
{
    @Html.HiddenFor(model => model.UcenikBiljeska.Id_biljeska)
    <div class="form-group">
        @Html.LabelFor(model => model.UcenikBiljeska.Zapazanje, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-lg-10">
            @*<textarea id="limiter" rows="10" placeholder="Ostala zapažanja" class="form-control"></textarea>*@
            @Html.TextAreaFor(model => model.UcenikBiljeska.Zapazanje, new { @class = "form-control", rows = "10" })
        </div>
    </div>

    <div class="form-group">
        <label for="text4" class="control-label col-lg-2"></label>
        <div class="col-lg-6">
            <button type="button" onclick="potvrdi('@Url.Action("PromjenaZapazanja","UcenikBiljeska")','#zapazanjaForm','Spremljeno')" class="btn btn-success">Potvrdi</button>
            <button type="button" onclick="odustani('@Url.Action("Zapazanja","UcenikBiljeska", new { id=Model.UcenikBiljeska.Id_biljeska})','#zapazanja')" class="btn btn-default">Odustani</button>
        </div>
    </div>
}
