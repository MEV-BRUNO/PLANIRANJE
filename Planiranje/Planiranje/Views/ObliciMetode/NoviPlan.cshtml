@model Planiranje.Models.ObliciMetodeModel

@{
    Layout = null;
}

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">Novi oblik/metoda</h4>
        </div>
        @using (Html.BeginForm(null, null, new { @id = string.Empty }, FormMethod.Post, new { @id = "noviOblikView", @class = "form-horizontal", role = "form" }))
        {
        <div class="modal-body">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.oblik.Id_oblici, new { Value = 0 })
            <div class="form-group">
                @Html.LabelFor(model => model.oblik.Naziv, htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.TextAreaFor(model => model.oblik.Naziv, new { @class = "form-control", @id = "newName",
				   onkeydown = "hideModalA(event, \"/ObliciMetode/NoviPlan\", \"#noviOblikView\", \"Nova oblik je uspješno spremljen\")"
			   })
                    @Html.ValidationMessageFor(model => model.oblik.Naziv, "", new { @class = "text-danger" })
                </div>
            </div>           
			<div class="modal-footer">
				<button type="button" class="btn btn-default" data-dismiss="modal">Odustani</button>
				<input type="button" class="btn btn-primary" value="Spremi" onclick='hideModal("/ObliciMetode/NoviPlan", "#noviOblikView", "Nova oblik je uspješno spremljen")' />
			</div>
        </div>
        }
    </div>
</div>
