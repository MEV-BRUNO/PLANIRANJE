@model Planiranje.Models.PlanOs1View
@{
    Layout = null;
}

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">Brisanje područja djelovanja</h4>
        </div>
        @using (Ajax.BeginForm("ObrisiPodrucje", "PlanOs1", new { id = Model.Podrucje.Id_plan }, new AjaxOptions
        {
            HttpMethod = "Post",
            OnSuccess = "DeleteSuccess"
        }, new { @class = "form-horizontal", role = "form" }))
        {
        <div class="modal-body">
            @Html.HiddenFor(model => model.Podrucje.Id_plan)
            <div class="form-group">
                <div class="col-md-10">
                    <h5>
                        Jeste li sigurni da želite obrisati ovo područje djelovanja?
                    </h5>
                </div>
            </div>
            <div class="form-group">
                @Html.Label("Redni broj", new { @class = "control-label col-md-3" })
                <div class="col-md-4">
                    @Html.TextBoxFor(model => model.Pozicija,new { @class="form-control", @disabled="true"})
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Podrucje.Opis_Podrucje, htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.TextAreaFor(model => model.PodrucjeRada.First().Naziv, new { @class = "form-control", @disabled = "true" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Podrucje.Cilj, htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.TextAreaFor(model => model.Ciljevi.First().Naziv, new { @class = "form-control", @disabled = "true" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Podrucje.Potrebno_sati, htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.TextBoxFor(model => model.Podrucje.Potrebno_sati, new { @class = "form-control", @disabled = "true" })
                </div>
            </div>
            <div class="modal-footer">
                <div class="form-group">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Odustani</button>
                    <input type="submit" class="btn btn-danger" value="Obriši" />
                </div>
            </div>
        </div>
        }
    </div>
</div>
