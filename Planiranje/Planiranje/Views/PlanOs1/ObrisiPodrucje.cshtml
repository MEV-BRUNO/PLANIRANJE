@model Planiranje.Models.OS_Plan_1_podrucje
    @{
        Layout = null;
    }
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Brisanje područja djelovanja</h4>
            </div>
            @using (Html.BeginForm(null, null, new { @id = string.Empty }, FormMethod.Post, new { @id = "obrisiPodrucje", @class = "form-horizontal", role = "form" }))
            {
                <div class="modal-body">
                    @Html.HiddenFor(model => model.Id_plan)
                    <div class="form-group">
                        <div class="col-md-10">
                            <h5>
                                Jeste li sigurni da želite obrisati ovo područje djelovanja?
                            </h5>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.Label("Redni broj", new { @class = "control-label col-md-3" })
                        <div class="col-md-4">
                            @Html.TextBox("pozicija", ViewBag.pozicija as string, new { @class = "form-control", @disabled = "true" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Opis_Podrucje, htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            @Html.TextArea("podrucje", ViewBag.podrucje as string, new { @class = "edit-opis", @disabled = "true", rows = "3" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Cilj, htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            @Html.TextAreaFor(model => model.Cilj, new { @class = "edit-opis", @disabled = "true", rows = "3" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Potrebno_sati, htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            @Html.TextBoxFor(model => model.Potrebno_sati, new { @class = "form-control", @disabled = "true" })
                        </div>
                    </div>
                    <div class="modal-footer">
                        <div class="form-group">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Odustani</button>
                            <input type="button" onclick="reload('@Url.Action("ObrisiPodrucje","PlanOs1")','#obrisiPodrucje')" class="btn btn-danger" value="Obriši" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
