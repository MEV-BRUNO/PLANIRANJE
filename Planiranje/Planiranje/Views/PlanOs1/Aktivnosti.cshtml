@model Planiranje.Models.PlanOs1View
    @{
        Layout = null;
    }

<div class="row">
    <div class="col-lg-2">

        <button id="btnAktivnost" onclick="showModal('@Url.Action("NovaAktivnost","PlanOs1",new { id=ViewBag.id})')" class="btn btn-primary btn-xs btn-grad">Dodaj aktivnost</button>

    </div>
    <div class="col-lg-10">
        <div class="form-group">
            <label class="control-label col-lg-3">Odaberi područja rada:</label>
            <div class="col-lg-7">
                @*@Html.DropDownListFor(m=>m.Os_Plan_1_Aktivnost.Id_podrucje,Model.PodrucjeRadaSelectedItems,new { @class="form-control"})*@
                <select id="selectPodrucje" onchange="promjenaPodrucja()" class="form-control">
                    @{ int br = 1;
                        int pozicija = 0;
                    }
                    @foreach (var item in Model.OsPlan1Podrucje)
                    {
                        if(ViewBag.id!=null && ViewBag.id == item.Id_plan)
                        {
                            pozicija = br;
                            <option selected value="@item.Id_plan">
                            @br. @Model.PodrucjeRada.SingleOrDefault(s => s.Id_podrucje == item.Opis_Podrucje).Naziv
                        </option>
                        }
                        else
                        {
                            <option value="@item.Id_plan">
                            @br. @Model.PodrucjeRada.SingleOrDefault(s => s.Id_podrucje == item.Opis_Podrucje).Naziv
                        </option>
                        }
                        
                        br++;
                    }
                </select>
            </div>
        </div>
    </div><!--END COL 10-->
</div>
    <div class="row">
        <div class="col-lg-12">
            <p>

            </p>
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover" id="dataTableAktivnosti">
                    <thead>
                        <tr>
                            <th>Rb.</th>
                            <th>Naziv aktivnosti</th>
                            <th>Potrebno<br>sati</th>
                            <th>Pomak</th>
                            <th>Aktivnost</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ int i = 0;}
                        @foreach (var item in Model.OsPlan1Aktivnost)
                        {
                            i++;
                            <tr>
                                <td class="col-md-1">@pozicija.@i</td>
                                <td class="col-md-7">@Model.Aktivnosti.Single(s => s.Id_aktivnost == item.Opis_aktivnost).Naziv</td>
                                <td class="col-md-2">@item.Potrebno_sati</td>
                                <td class="col-md-1">
                                    <a onclick="pomak('@Url.Action("AktivnostPomakGore","PlanOs1", new { id=item.Id_plan})','#aktivnosti', 'Aktivnost je pomaknuta gore')" class="btn btn-warning btn-xs btn-grad">Gore</a>
                                    <a onclick="pomak('@Url.Action("AktivnostPomakDolje","PlanOs1", new { id=item.Id_plan})','#aktivnosti', 'Aktivnost je pomaknuta dolje')" class="btn btn-warning btn-xs btn-grad">Dolje</a>
                                </td>
                                <td class="col-md-1">
                                    <a onclick="showModal('@Url.Action("UrediAktivnost","PlanOs1",new { id=item.Id_plan, pozicija=pozicija.ToString()+"."+i.ToString(), pozicija_podrucja=Model.Pozicija})')" class="btn btn-primary btn-xs btn-grad">Uredi</a>
                                    <a onclick="showModal('@Url.Action("ObrisiAktivnost","PlanOs1", new { id=item.Id_plan, pozicija=Model.Pozicija, broj=pozicija.ToString()+"."+i.ToString()})')" class="btn btn-danger btn-xs btn-grad">Obriši</a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div><!--END COL 12-->
    </div>
<script>
    $(document).ready(function () {
        $('#dataTableAktivnosti').dataTable({ stateSave: true });
    });
</script>
