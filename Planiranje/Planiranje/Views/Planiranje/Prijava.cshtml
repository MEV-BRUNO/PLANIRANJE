@model Planiranje.Models.Pedagog
@using System.Web.Mvc;

@using (Html.BeginForm())
{

	@Html.AntiForgeryToken()

<div class="form-horizontal">
	<div class="container">
		<div class="row">
			<div class="col-md-4 col-md-offset-4">
					<div class="text-center">
						<img src="../assets/img/logo.png" id="logoimg" alt=" Logo" />
					</div>
					<p class="text-muted text-center btn-block btn btn-primary btn-rect">
						Upišite korisnicko ime i lozinku
					</p>
					@Html.LabelFor(model => model.Email, new { @class = "control-label" })
					@Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", style = "max-width:100%;" } })
					@Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })

					@Html.LabelFor(model => model.Lozinka, new { @class = "control-label" })
					@Html.EditorFor(model => model.Lozinka, new { htmlAttributes = new { @class = "form-control", style = "max-width:100%;" } })
					@Html.ValidationMessageFor(model => model.Lozinka, "", new { @class = "text-danger" })
					
					<br>

					<input type="submit" value="Prijavi se" class="btn btn-danger" />
					
					<br>
					<p>
						@Html.ActionLink("Prijava", "Prijava", new { @class = "btn btn-link" }) |
						@Html.ActionLink("Ponovi lozinku", "ZaboravljenaLozinka", new { @class = "btn btn-link" }) |
						@Html.ActionLink("Registracija", "Registracija", new { @class = "btn btn-link" })
					</p>
			</div>
		</div>
	</div>
</div>
}

@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}