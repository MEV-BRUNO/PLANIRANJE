@model Planiranje.Models.Pedagog
@{
    Layout = null;
}
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">Osobni podaci</h4>
        </div>
        @using (Html.BeginForm(null, null, new { @id = string.Empty }, FormMethod.Post, new { @id = "osobniPodaciModal", @class = "form-horizontal", role = "form" }))
        {            
            @Html.HiddenFor(model=>model.Email)
            @Html.HiddenFor(model=>model.Licenca)
        <div class="modal-body">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.Ime, htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-5">
                    @Html.TextBoxFor(model => model.Ime, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Ime, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Prezime, htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-5">
                    @Html.TextBoxFor(model => model.Prezime, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Prezime, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Titula, htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-5">
                    @Html.TextBoxFor(model => model.Titula, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Titula, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-5">
                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control", disabled = "" })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Licenca, htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-5">
                    @Html.TextBoxFor(model => model.Licenca, new { @class = "form-control", disabled = "" })
                    @Html.ValidationMessageFor(model => model.Licenca, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Lozinka, "Nova lozinka", htmlAttributes: new { @class = "control-label col-md-3" })*
                <div class="col-md-5">
                    @Html.PasswordFor(model => model.Lozinka, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Lozinka, "", new { @class = "text-danger" })                    
                </div>
            </div>
            <br />
            <br />
            <div>
                *Ukoliko ne želite mijenjati lozinku, ovo polje ostavite prazno
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Odustani</button>
                <input type="button" class="btn btn-success" value="Spremi promjene" onclick='hideModalOnly("@Url.Action("OsobniPodaci","Planiranje")","#osobniPodaciModal","Promjene su spremljene")' />
            </div>
        </div>
        }
    </div>
</div>

