@model List<Planiranje.Models.Ucenici.RazredniOdjel>
@{
    Page.Title = "Razredni odjeli";
    Layout = Request.IsAjaxRequest() ? null : "~/Views/Shared/_Layout.cshtml";
}

<div class="inner">
    <div class="row">
        <div class="col-lg-12">
            <h3>Popis razrednih odjela</h3>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">                
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="table-responsive">
                                <p>
                                    <a href="#" class="btn btn-primary btn-xs btn-grad"> Dodaj novi odjel</a>
                                </p>
                                <table class="table table-striped table-bordered table-hover" id="dataTable">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Naziv </th>
                                            <th>Razred </th>
                                            <th>Šk. godina </th>
                                            <th>Razrednik</th>
                                            <th>Aktivnost</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{ int broj = 0;}
                                        @foreach (var item in Model)
                                        { broj++;
                                            int godina = item.Sk_godina + 1;
                                        <tr>
                                            <td class="col-md-1">@broj</td>
                                            <td class="col-md-4">@item.Naziv</td>
                                            <td class="col-md-2">@item.Razred</td>
                                            <td class="col-md-1">@item.Sk_godina./@godina.</td>
                                            <td class="col-md-2">@item.Id_razrednik</td>
                                            <td class="col-md-2">
                                                <a href="#" class="btn btn-primary btn-xs btn-grad">Uredi</a>
                                                <a href="#" class="btn btn-info btn-xs btn-grad">Otvori</a>
                                                <a href="#" class="btn btn-danger btn-xs btn-grad">Briši</a>
                                            </td>
                                        </tr>                                   
                                        }
                                    </tbody>
                                </table>

                            </div>
                        </div><!--END COL 3-->
                        <div class="col-lg-1">

                        </div><!--END COL 9 -->
                    </div> <!--END ROW -->
                    <div class="row">
                        <div class="col-lg-6">

                        </div>
                        <div class="col-lg-6">
                        </div>
                    </div> <!--END ROW -->
                </div>
            </div>
        </div>

    </div>

</div>
<script>
     $(document).ready(function () {
        $("#dataTable").dataTable();        
    });
</script>


