@model List<Planiranje.Models.Ucenici.Nastavnik>
@{
    Page.Title = "Učitelji/nastavnici";
    Layout = Request.IsAjaxRequest() ? null : "~/Views/Shared/_Layout.cshtml";
}

<div class="inner">    
    <div class="row">
        <div class="col-lg-12">
            <h3>Popis učitelja/nastavnika</h3>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="table-responsive">
                                <p>
                                    <a onclick="showModal('@Url.Action("NoviNastavnik","OpciPodaci")')" class="btn btn-primary btn-xs btn-grad"> Dodaj novog nastavnika</a>
                                </p>
                                <table class="table table-striped table-bordered table-hover" id="dataTable">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Ime </th>
                                            <th>Prezime </th>
                                            <th>Titula</th>
                                            <th>Kontakt</th>
                                            <th>Aktivnost</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{ int broj = 0;}
                                        @foreach (var item in Model)
                                        {
                                            broj++;
                                            <tr>
                                                <td class="col-md-1">@broj</td>
                                                <td class="col-md-3">@item.Ime</td>
                                                <td class="col-md-3">@item.Prezime</td>
                                                <td class="col-md-1">@item.Titula</td>
                                                <td class="col-md-2">@item.Kontakt</td>
                                                <td class="col-md-2">
                                                    <a onclick="showModal('@Url.Action("UrediNastavnik","OpciPodaci",new { id=item.Id})')" class="btn btn-primary btn-xs btn-grad">Uredi</a>
                                                    <a onclick="showModal('@Url.Action("ObrisiNastavnika","OpciPodaci", new { id=item.Id})')" class="btn btn-danger btn-xs btn-grad">Obriši</a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>

                            </div>
                        </div><!--END COL 3-->
                        <div class="col-lg-1">

                        </div><!--END COL 9 -->
                    </div> <!--END ROW -->
                    <div class="row">
                        <div class="col-lg-6">

                        </div>
                        <div class="col-lg-6">
                        </div>
                    </div> <!--END ROW -->
                </div>
            </div>
        </div>

    </div>

</div>
<script>
     $(document).ready(function () {
         $("#dataTable").dataTable();         
         @if (TempData["poruka"] != null)
         {
             @:showSnackBar('@TempData["poruka"]');
         }
    });
</script>
