@model List<Planiranje.Models.Sk_godina>
@{
    Page.Title = "Školska godina";
    Layout = Request.IsAjaxRequest() ? null : "~/Views/Shared/_Layout.cshtml";
}

<div class="inner">
    @if (TempData["poruka"] != null)
    {
        <div id="poruka" style="display:none">1</div>
    }
    <div class="row">
        <div class="col-lg-12">
            <h3>Pregled školskih godina</h3>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="table-responsive">                               
                                <table class="table table-striped table-bordered table-hover" id="dataTable">
                                    <thead>
                                        <tr>
                                            <th>Školska godina</th>                                            
                                        </tr>
                                    </thead>
                                    <tbody>                                        
                                        @foreach (var item in Model)
                                        {
                                            int broj = item.Sk_Godina+1;
                                            <tr>
                                                <td class="col-md-12">@item.Sk_Godina./@broj.</td>                                         
                                            </tr>
                                        }
                                    </tbody>
                                </table>

                            </div>
                        </div><!--END COL 3-->
                        <div class="col-lg-1">

                        </div><!--END COL 9 -->
                    </div> <!--END ROW -->
                    <div class="row">
                        <div class="col-lg-6">

                        </div>
                        <div class="col-lg-6">
                        </div>
                    </div> <!--END ROW -->
                </div>
            </div>
        </div>

    </div>

</div>
<script>
     $(document).ready(function () {
         $("#dataTable").dataTable();
         if ($("#poruka").text() == "1") {
            showSnackBar('@TempData["poruka"]');
        }
    });
</script>

