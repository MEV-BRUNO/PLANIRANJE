@model Planiranje.Models.Ucenici.Dokument
@{
    Layout = null;
}
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">Dodavanje novog dokumenta</h4>
        </div>
        @using (Html.BeginForm(null, null, new { @id = string.Empty }, FormMethod.Post, new { @id = "noviDokument", enctype = "multipart/form-data" }))
        {
            <div class="modal-body">
                <div class="form-group col-lg-12">
                    @Html.LabelFor(model => model.Opis, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.Opis, new { htmlAttributes = new { @class = "form-control" } })
                    @*@Html.ValidationMessageFor(model => model.Opis, "", new { @class = "text-danger" })*@
                    @if (ViewBag.greska1 != null)
                    {
                        <div class="text-danger">@ViewBag.greska1</div>
                    }
                </div>
                <div class="col-md-12">
                    <input type="file" name="file" />
                </div>
                @if (ViewBag.greska != null)
                {
                    <div class="text-danger">@ViewBag.greska</div>
                }   
                <br />
                <div class="progress">
                    <div id="trakanapretka" class="progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100">

                    </div>
                </div>
                <hr />
                <div class="col-md-12">
                    NAPOMENA: Maksimalna dozvoljena veličina datoteke je 100 MB. Nije dozvoljen upload *.exe i *.bin datoteka iz sigurnosnih razloga.
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Odustani</button>
                <input type="button" class="btn btn-primary" value="Spremi" onclick='upload("@Url.Action("Upload","Dokument")","noviDokument", "Dokument je spremljen", "trakanapretka")' />
            </div>
        }
    </div>
</div>
