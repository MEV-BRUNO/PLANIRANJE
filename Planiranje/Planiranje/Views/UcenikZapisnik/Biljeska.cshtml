@model List<Planiranje.Models.Ucenici.Ucenik_zapisnik_biljeska>
@{
    Layout = null;
    int brojac = 0;
}

<p>
    <a onclick="showModal('@Url.Action("NovaBiljeska","UcenikZapisnik",new { id = ViewBag.id})')"
       class="btn btn-primary btn-xs btn-grad">Nova bilješka</a>
</p>
<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover" id="dataTable2">
        <thead>
            <tr>
                <th>#</th>
                <th>Datum</th>
                <th>Sadržaj</th>
                <th>Dogovor/zaključak</th>
                <th>Aktivnost</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                brojac++;
                <tr>
                    <td class="col-md-1">@brojac</td>
                    <td class="col-md-1">@item.Datum.ToShortDateString()</td>
                    <td class="col-md-5">@item.Sadrzaj</td>
                    <td class="col-md-4">@item.Dogovor</td>
                    <td class="col-md-2">
                        <a onclick="showModal('@Url.Action("UrediBiljeska","UcenikZapisnik", new { id=item.Id})')" class="btn btn-primary btn-xs btn-grad">Uredi</a>
                        <a onclick="showModal('@Url.Action("ObrisiBiljeska","UcenikZapisnik", new { id=item.Id})')" class="btn btn-danger btn-xs btn-grad">Obriši</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

