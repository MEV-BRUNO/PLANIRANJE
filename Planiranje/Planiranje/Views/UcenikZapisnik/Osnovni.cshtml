@model Planiranje.Models.Ucenici.Ucenik
    @using Planiranje.Models.Ucenici
    @{
        Layout = null;
    }
    <h4>Osobni podaci</h4>
    @using (Html.BeginForm(null, null, new { @id = string.Empty }, FormMethod.Post, new { @id = "osobniPodaci", @class = "form-horizontal", role = "form" }))
    {
        @Html.HiddenFor(model => model.Id_ucenik)
        <div class="form-group">
            @Html.LabelFor(model => model.ImePrezime, htmlAttributes: new { @class = "control-label col-md-2" })

            <div class="col-lg-6">
                @Html.TextBoxFor(model => model.ImePrezime, new { @class = "form-control", disabled = "" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-lg-2">Razredni odjeli</label>
            <div class="col-lg-6">
                <select class="form-control">
                    @foreach (var item in ViewBag.odjeli as List<RazredniOdjel>)
                    {
                        <option>@item.Naziv</option>
                    }
                </select>
            </div>
        </div>
        <div class="form-group">
            @*<label for="text1" class="control-label col-lg-2">Datum rođenja</label>*@
            @Html.LabelFor(model => model.Datum, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-lg-6">
                @*<input type="text" id="text1" placeholder="Datum rođenja" class="form-control" />*@
                @Html.EditorFor(model => model.Datum, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Oib, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-lg-6">
                @Html.EditorFor(model => model.Oib, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Adresa, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-lg-6">
                @*<textarea id="limiter" rows="2" placeholder="Adresa" class="form-control"></textarea>*@
                @Html.EditorFor(model => model.Adresa, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Grad, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-lg-6">
                @Html.EditorFor(model => model.Grad, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            <label for="text4" class="control-label col-lg-2"></label>
            <div class="col-lg-6">
                <button type="button" onclick="potvrdi('@Url.Action("Osnovni","UcenikZapisnik")','#osobniPodaci','Spremljeno')" class="btn btn-success">Potvrdi</button>
                <button type="button" onclick="odustani('@Url.Action("Osnovni","UcenikZapisnik", new { id = Model.Id_ucenik})','#osobni')" class="btn btn-default">Odustani</button>
            </div>
        </div>
    }

