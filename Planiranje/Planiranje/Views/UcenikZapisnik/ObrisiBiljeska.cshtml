@model Planiranje.Models.Ucenici.Ucenik_zapisnik_biljeska
@{
    Layout = null;
}
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">Brisanje bilješke</h4>
        </div>
        @using (Html.BeginForm(null, null, new { @id = string.Empty }, FormMethod.Post, new { @id = "obrisiBiljeska", @class = "form-horizontal", role = "form" }))
        {
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.Id_ucenik_zapisnik)
            <div class="modal-body">
                <p><b>Jeste li sigurni da želite obrisati ovu bilješku?</b></p>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.Datum, htmlAttributes: new { @class = "control-label col-lg-3" })
                    <div class="col-lg-9">
                        @Html.TextBoxFor(model => model.Datum, new { @class = "form-control", disabled = "" })
                        @Html.ValidationMessageFor(model => model.Datum, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group col-lg-12">
                    @Html.LabelFor(model => model.Sadrzaj, htmlAttributes: new { @class = "control-label" })
                    @Html.TextBoxFor(model => model.Sadrzaj, new { @class = "form-control", disabled = "" })
                    @Html.ValidationMessageFor(model => model.Sadrzaj, "", new { @class = "text-danger" })
                </div>
                <div class="form-group col-lg-12">
                    @Html.LabelFor(model => model.Dogovor, htmlAttributes: new { @class = "control-label" })
                    @Html.TextBoxFor(model => model.Dogovor, new { @class = "form-control", disabled="" })
                    @Html.ValidationMessageFor(model => model.Dogovor, "", new { @class = "text-danger" })
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Odustani</button>
                    <input type="button" class="btn btn-danger" value="Obriši" onclick='zatvoriModal("@Url.Action("ObrisiBiljeska","UcenikZapisnik")","#obrisiBiljeska","#pracenje","Bilješka je obrisana")' />
                </div>
            </div>
        }
    </div>
</div>
