@model Planiranje.Models.Ucenici.Ucenik_zapisnik_biljeska
@{
    Layout = null;
}
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">Uređivanje bilješke</h4>
        </div>
        @using (Html.BeginForm(null, null, new { @id = string.Empty }, FormMethod.Post, new { @id = "urediBiljeska", @class = "form-horizontal", role = "form" }))
        {
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.Id_ucenik_zapisnik)
            <div class="modal-body">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.Datum, htmlAttributes: new { @class = "control-label col-lg-3" })
                    <div class="col-lg-9">
                        @Html.EditorFor(model => model.Datum, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Datum, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group col-lg-12">
                    @Html.LabelFor(model => model.Sadrzaj, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.Sadrzaj, new
                    {
                        htmlAttributes = new
                        {
                            @class = "form-control",
                            onkeydown = "provjeriEnter(event,\"/UcenikZapisnik/UrediBiljeska\",\"#urediBiljeska\",\"#pracenje\",\"Bilješka je promijenjena\")"
                        }
                    })
                    @Html.ValidationMessageFor(model => model.Sadrzaj, "", new { @class = "text-danger" })
                </div>
                <div class="form-group col-lg-12">
                    @Html.LabelFor(model => model.Dogovor, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.Dogovor, new
                    {
                        htmlAttributes = new
                        {
                            @class = "form-control",
                            onkeydown = "provjeriEnter(event,\"/UcenikZapisnik/UrediBiljeska\",\"#urediBiljeska\",\"#pracenje\",\"Bilješka je promijenjena\")"
                        }
                    })
                    @Html.ValidationMessageFor(model => model.Dogovor, "", new { @class = "text-danger" })
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Odustani</button>
                    <input type="button" class="btn btn-primary" value="Promijeni" onclick='zatvoriModal("@Url.Action("UrediBiljeska","UcenikZapisnik")","#urediBiljeska","#pracenje","Bilješka je promijenjena")' />
                </div>
            </div>
        }
    </div>
</div>

