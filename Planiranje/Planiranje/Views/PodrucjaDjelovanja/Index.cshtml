@model Planiranje.Models.PodrucjaRadaModel

@{
	Page.Title = ViewBag.Title;
	Layout = Request.IsAjaxRequest() ? null : "~/Views/Shared/_Layout.cshtml";
}

<div class="inner">
	<div class="row">
		<div class="col-lg-12">
			<h3> Pregled područja djelovanja </h3>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-12">
			<div class="panel panel-default">
				<div class="panel-body">
					<div class="row">
						<div class="col-lg-2">
							<div class="pull-left">
								<input type="button" class="btn btn-primary btn-md" value="Novi područje djelovanja" onclick='showModal("@Url.Action("NoviPlan", "PodrucjaDjelovanja")")' />
							</div>
						</div>
					</div>
					<br>
					@Html.Partial("Table", Model)
					<div class="modal fade" id="assetModal" tabindex="-1" role="dialog" aria-labelledby="assetModal" aria-hidden="true" data-backdrop="static">
						<div id="assetContainer"></div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<script>
	$(document).ready(function () {
		$("#dataTable").dataTable();
	});
</script>
