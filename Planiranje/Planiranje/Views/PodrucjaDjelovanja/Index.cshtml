@model Planiranje.Models.PodrucjaRadaModel

@{
	Page.Title = ViewBag.Title;
	Layout = Request.IsAjaxRequest() ? null : "~/Views/Shared/_Layout.cshtml";
}

<div class="inner">
	<div class="row">
		<div class="col-lg-12">
			<h3>@ViewBag.Title</h3>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-12">
			<div class="panel panel-default">
				<div class="panel-heading">
					<div class="row">
						<div class="col-lg-2">
							<div class="pull-left">
								<input type="button" class="btn btn-primary btn-md" value="Novo područje djelovanja" onclick='showModal("@Url.Action("NoviPlan", "PodrucjaDjelovanja")")' />
							</div>
						</div>
					</div>
				</div>
				<div class="panel-body">
					@Html.Partial("Table", Model)
				</div>
			</div>
		</div>
	</div>
</div>
<script>
	$(document).ready(function () {
        $("#dataTablePodrucje").dataTable({ stateSave: true });
	});
</script>
