@model PagedList.IPagedList<Planiranje.Models.Aktivnost>

<table class="table table-bordered table-hover" id="dataTables-example">
    <thead>
        <tr>
            <td class="col-lg-1">
                @Html.ActionLink("Id", "Index", "Aktivnosti", new { Sorting_Order = ViewBag.SortingName, Filter_Value = ViewBag.FilterValue })
            </td>
            <td class="col-lg-9">
                @Html.ActionLink("Naziv", "Index", "MjesecniPlan", new { Sorting_Order = ViewBag.SortingName, Filter_Value = ViewBag.FilterValue })
            </td>            
            <td class="col-lg-2">
                Akcija
            </td>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id_aktivnost)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Naziv)
                </td>               
                <td>
                    <div class="pull-right">
                        <a data-toggle="modal" data-url="@Url.Action("Edit","Aktivnosti",new { id = item.Id_aktivnost})" id="editAsset" class="btn btn-primary btn-xs ">Uredi</a>
                        <a data-toggle="modal" data-url="@Url.Action("Delete","Aktivnosti",new { id = item.Id_aktivnost})" id="deleteAsset" class="btn btn-danger btn-xs ">Obriši</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>