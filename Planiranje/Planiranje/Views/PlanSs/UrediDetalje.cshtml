@model Planiranje.Models.SSModel

@{
	Page.Title = ViewBag.Title;
}

<div class="inner" id="newPlan">
	<div class="row">
		<div class="col-lg-12">
			<h3>@ViewBag.Title</h3>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-12">
			<div class="panel panel-default">
				<div class="panel-heading">
					<div class="row">
						<div class="col-lg-2">
							<p>Novi detalji</p>
						</div>
					</div>
				</div>
				<div class="panel-body">
					<div class="row">
						<div class="col-lg-12">
							<div class="modal-body">
								@using (Html.BeginForm(null, null, new { @id = string.Empty }, FormMethod.Post, new { @id = "UrediDetaljSSView", @class = "form-horizontal", role = "form" }))
								{
									@Html.HiddenFor(model => model.ID_GODINA)
									@Html.HiddenFor(model => model.SS_Plan_Podrucje.Id)
									@Html.HiddenFor(model => model.SS_Plan_Podrucje.ID_plan)
									@Html.HiddenFor(model => model.ID_PLAN)
