@model Planiranje.Models.SSModel

@{
    Layout = null;
}

<div class="modal-dialog" style="width:1200px">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">Uređivanje detalja plana za srednju školu</h4>
        </div>
        @using (Html.BeginForm(null, null, new { @id = string.Empty }, FormMethod.Post, new { @id = "noviPlanSSView", @class = "form-horizontal", role = "form" }))
        {
            @Html.HiddenFor(model => model.SS_Plan_Podrucje.Id)
            @Html.HiddenFor(model => model.SS_Plan_Podrucje.ID_plan)
            @Html.HiddenFor(model => model.SS_Plan.Id_plan)     
            @Html.HiddenFor(model => model.SS_Plan_Podrucje.Red_br)
        <div class="modal-body">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.SS_Plan_Podrucje.Opis_podrucje, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownListFor(model => model.SS_Plan_Podrucje.Opis_podrucje, Model.PodrucjaItems, "--Odaberi područje--", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.SS_Plan_Podrucje.Opis_podrucje, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.SS_Plan_Podrucje.Sadrzaj, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextAreaFor(model => model.SS_Plan_Podrucje.Sadrzaj, new { @class = "edit-opis", rows = "3" })
                            @Html.ValidationMessageFor(model => model.SS_Plan_Podrucje.Sadrzaj, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.SS_Plan_Podrucje.Ishodi, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextAreaFor(model => model.SS_Plan_Podrucje.Ishodi, new { @class = "edit-opis", rows = "3" })
                            @Html.ValidationMessageFor(model => model.SS_Plan_Podrucje.Ishodi, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.SS_Plan_Podrucje.Mjesto, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextAreaFor(model => model.SS_Plan_Podrucje.Mjesto, new { @class = "edit-opis", rows = "2" })
                            @Html.ValidationMessageFor(model => model.SS_Plan_Podrucje.Mjesto, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.SS_Plan_Podrucje.Vrijeme, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.SS_Plan_Podrucje.Vrijeme, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.SS_Plan_Podrucje.Vrijeme, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.SS_Plan_Podrucje.Sati, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-3">
                            @Html.EditorFor(model => model.SS_Plan_Podrucje.Sati, new { htmlAttributes = new { @class = "form-control", min = "0" } })
                            @Html.ValidationMessageFor(model => model.SS_Plan_Podrucje.Sati, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <!--CILJEVI-->
                    <div class="form-group">
                        <div class="col-lg-12">
                            @Html.LabelFor(model => model.SS_Plan_Podrucje.Svrha)
                        </div>
                        <div class="col-lg-7">
                            <div class="form-group">
                                <div class="col-lg-12">
                                    @Html.TextAreaFor(model => model.SS_Plan_Podrucje.Svrha, new { @class = "edit-text-area", id = "ciljeviText", @required = "" })
                                    @Html.ValidationMessageFor(model => model.SS_Plan_Podrucje.Svrha, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-5">
                            <div class="form-group">
                                <div class="col-lg-12">
                                    @Html.DropDownList("Ciljevi", Model.CiljeviItems, "--Odaberi ciljeve--", new { @class = "form-control", id = "ciljeviList" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <input type="button" class="btn btn-primary" style="width:100%;" onclick='appendText("ciljeviList", "ciljeviText")' value="Dodaj" />
                            </div>
                        </div>
                    </div>
                    <!--//CILJEVI-->
                    <!--ZADACI-->
                    <div class="form-group">
                        <div class="col-lg-12">
                            @Html.LabelFor(model => model.SS_Plan_Podrucje.Zadaca)
                        </div>
                        <div class="col-lg-7">
                            <div class="form-group">
                                <div class="col-lg-12">
                                    @Html.TextAreaFor(model => model.SS_Plan_Podrucje.Zadaca, new { @class = "edit-text-area", id = "zadaciText", @required = "" })
                                    @Html.ValidationMessageFor(model => model.SS_Plan_Podrucje.Zadaca, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-5">
                            <div class="form-group">
                                <div class="col-lg-12">
                                    @Html.DropDownList("Zadaci", Model.ZadaciItems, "--Odaberi zadatke--", new { @class = "form-control", id = "zadaciList" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <input type="button" class="btn btn-primary" style="width:100%;" onclick='appendText("zadaciList", "zadaciText")' value="Dodaj" />
                            </div>
                        </div>
                    </div>
                    <!--//ZADACI-->
                    <!--OBLICI-->
                    <div class="form-group">
                        <div class="col-lg-12">
                            @Html.LabelFor(model => model.SS_Plan_Podrucje.Oblici)
                        </div>
                        <div class="col-lg-7">
                            <div class="form-group">
                                <div class="col-lg-12">
                                    @Html.TextAreaFor(model => model.SS_Plan_Podrucje.Oblici, new { @class = "edit-text-area", id = "obliciText", @required = "" })
                                    @Html.ValidationMessageFor(model => model.SS_Plan_Podrucje.Oblici, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-5">
                            <div class="form-group">
                                <div class="col-lg-12">
                                    @Html.DropDownList("Oblici", Model.ZadaciItems, "--Odaberi oblike--", new { @class = "form-control", id = "obliciList" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <input type="button" class="btn btn-primary" style="width:100%;" onclick='appendText("obliciList", "obliciText")' value="Dodaj" />
                            </div>
                        </div>
                    </div>
                    <!--//OBLICI-->
                    <!--SUBJEKTI-->
                    <div class="form-group">
                        <div class="col-lg-12">
                            @Html.LabelFor(model => model.SS_Plan_Podrucje.Suradnici)
                        </div>
                        <div class="col-lg-7">
                            <div class="form-group">
                                <div class="col-lg-12">
                                    @Html.TextAreaFor(model => model.SS_Plan_Podrucje.Suradnici, new { @class = "edit-text-area", id = "subjektiText", @required = "" })
                                    @Html.ValidationMessageFor(model => model.SS_Plan_Podrucje.Suradnici, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-5">
                            <div class="form-group">
                                <div class="col-lg-12">
                                    @Html.DropDownList("Suradnici", Model.SubjektiItems, "--Odaberi subjekte--", new { @class = "form-control", id = "subjektiList" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <input type="button" class="btn btn-primary" style="width:100%;" onclick='appendText("subjektiList", "subjektiText")' value="Dodaj" />
                            </div>
                        </div>
                    </div>
                    <!--//SUBJEKTI-->

                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Odustani</button>
                <input type="button" class="btn btn-primary" value="Promijeni" onclick="reload('@Url.Action("UrediDetalje","PlanSs")','#noviPlanSSView')" />
            </div>
        </div>
        }
    </div>
</div>
