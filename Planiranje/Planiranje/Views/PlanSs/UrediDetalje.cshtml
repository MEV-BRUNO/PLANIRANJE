									<div class="modal-footer">
										<input type="button" class="btn btn-default" value="Odustani" onclick='showModal("@Html.Raw(@Url.Action("CancelNewDetails", "PlanSs", new { id_godina = Model.ID_GODINA, id_plan = Model.ID_PLAN }))")' />
