										<div class="form-group">
											<div class="col-md-12">
												@Html.LabelFor(model => model.SS_Plan_Podrucje.Opis_podrucje)
											</div>
										</div>
										<div class="form-group">
											<div class="col-lg-8">
												@Html.DropDownList("Podrucje", Model.PodrucjaDjelovanja, "---Odaberite---", new { @class = "form-control", @id = "podrucjaDjelovanjaList" })
											</div>
											<div class="col-md-2">
												<input type="button" class="btn btn-primary" style="width: 100%" value="Dodaj" onclick='appendText("podrucjaDjelovanjaList", "podrucjaDjelovanjaText")' />
											</div>
											<div class="col-md-2">
												<input type="button" class="btn btn-danger" style="width: 100%" value="Ukloni" onclick='removeText("podrucjaDjelovanjaList", "podrucjaDjelovanjaText")' />
											</div>
										</div>
										<div class="form-group">
											<div class="col-md-12">
												@Html.TextAreaFor(model => model.SS_Plan_Podrucje.Opis_podrucje, new { @class = "edit-opis", @readonly = true, @id = "podrucjaDjelovanjaText" })
												@Html.ValidationMessageFor(model => model.SS_Plan_Podrucje.Opis_podrucje, "", new { @class = "text-danger" })
											</div>
										</div>
									</div>
									<div class="col-md-6">
										<div class="form-group">
											<div class="col-md-12">
												@Html.LabelFor(model => model.SS_Plan_Podrucje.Svrha)
											</div>
										</div>
										<div class="form-group">
											<div class="col-md-8">
												@Html.DropDownList("Ciljevi", Model.Ciljevi, "---Odaberite---", new { @class = "form-control", @id = "ciljeviList" })
											</div>
											<div class="col-md-2">
												<input type="button" class="btn btn-primary" style="width: 100%" value="Dodaj" onclick='appendText("ciljeviList", "ciljeviText")' />
