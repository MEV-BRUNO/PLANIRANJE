@model Planiranje.Models.SSModel

@{
    Layout = null;
}

<div class="modal-dialog">
	<div class="modal-content">
		<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
			<h4 class="modal-title">Novi plan za srednju školu</h4>
		</div>
		@using (Html.BeginForm(null, null, new { @id = string.Empty }, FormMethod.Post, new { @id = "noviPlanSSView", @class = "form-horizontal", role = "form" }))
        {
			@Html.HiddenFor(model => model.SS_Plan.Id_plan, new { Value = 0 })			
        <div class="modal-body">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.SS_Plan.Naziv, htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.EditorFor(model => model.SS_Plan.Naziv, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SS_Plan.Naziv, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.SS_Plan.Ak_godina, htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.DropDownListFor(model => model.SS_Plan.Ak_godina,Model.SKGodinaItems, new { @class = "form-control" })                    
                    @Html.ValidationMessageFor(model => model.SS_Plan.Ak_godina, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.SS_Plan.Opis, htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.TextAreaFor(model => model.SS_Plan.Opis, new { @class = "edit-opis", rows="3" })
                    @Html.ValidationMessageFor(model => model.SS_Plan.Opis, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Odustani</button>
                <input type="button" class="btn btn-primary" value="Spremi" onclick="reload('@Url.Action("NoviPlan","PlanSs")','#noviPlanSSView')" />
            </div>
        </div>
		}
	</div>
</div>
