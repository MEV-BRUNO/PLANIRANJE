@model Planiranje.Models.SSModel

@{
	Layout = null;
}

<div class="modal-dialog">
	<div class="modal-content">
		<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
			<h4 class="modal-title">Brisanje plana za srednju školu</h4>
		</div>
		@using (Html.BeginForm(null, null, new { @id = string.Empty }, FormMethod.Post, new { @id = "obrisiSSPlanModalView", @class = "form-horizontal", role = "form" }))
		{
        <div class="modal-body">
            @Html.HiddenFor(model => model.SS_Plan.Id_plan)
            @Html.HiddenFor(model=>model.SS_Plan.Id_pedagog)
            <div class="form-group">
                <div class="col-md-10">
                    <h5>Jeste li sigurni da želite obrisati slijedeći plan?</h5>
                </div>
            </div>
            <div class="form-group">
                @Html.Label("Broj", "Redni broj", new { @class = "control-label col-md-2" })
                <div class="col-md-3">
                    @Html.TextBoxFor(model => model.ID_PLAN, new { @class = "form-control", disabled = "" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.SS_Plan.Naziv, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.SS_Plan.Naziv, new { @class = "form-control", disabled = "" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.SS_Plan.Ak_godina, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.Tekst, new { @class = "form-control", disabled = "" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.SS_Plan.Opis, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.SS_Plan.Opis, new { @class = "edit-opis", disabled = "", rows="3" })
                </div>
            </div>
            <div class="modal-footer">
                <div class="form-group">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Odustani</button>
                    <input type="button" class="btn btn-danger" value="Obriši" onclick='reload("@Url.Action("Obrisi","PlanSs")", "#obrisiSSPlanModalView")' />
                </div>
            </div>
        </div>
		}
	</div>
</div>
