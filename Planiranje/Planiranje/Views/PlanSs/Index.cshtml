@model Planiranje.Models.SSModel
@using PagedList.Mvc;

@{
	Page.Title = ViewBag.Title;
	Layout = Request.IsAjaxRequest() ? null : "~/Views/Shared/_Layout.cshtml";
}

<div class="inner">
	<div class="row">
		<div class="col-lg-12">
			<h3> Plan - srednja skola </h3>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-12">
			<div class="panel panel-default">
				<div class="panel-heading">
					<div class="row">
						<div class="col-lg-6">
							<div class="pull-left">
								<input type="button" class="btn btn-primary btn-md" value="Novi plan" onclick='showModal("@Url.Action("NoviPlan", "PlanSs")")' />
							</div>
						</div>
						<div class="col-lg-6">
							<div class="pull-right">
								<input type="button" class="btn btn-danger btn-md" value="Ispiši" onclick="location.href='@Url.Action("Ispis", "PlanSs", new { id = 1 })'" />
							</div>
						</div>
					</div>
				</div>
				<div class="panel-body">
					@if (Model.SS_Planovi.Count >= 0)
					{
						@Html.Partial("Table", Model)
					}
				</div>
			</div>
		</div>
	</div>
</div>

<script>
	$(document).ready(function () {
		$("#dataTable").dataTable();
	});
</script>
