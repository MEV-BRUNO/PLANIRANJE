@model Planiranje.Models.SSModel

@{
    Page.Title = "Planovi za srednju školu";
    Layout = Request.IsAjaxRequest() ? null : "~/Views/Shared/_Layout.cshtml";
}

<div class="inner">
    @if (TempData["poruka"] != null)
    {
        <div id="poruka" style="display:none">1</div>
    }
    <div class="row">
        <div class="col-lg-12">
            <h3>Pregled planova za srednju školu</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-lg-8">
                            <div class="pull-left">
                                <input type="button" class="btn btn-primary btn-md" value="Novi plan" onclick='showModal("@Url.Action("NoviPlan", "PlanSs")")' />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    @Html.Partial("Table", Model)
                </div>
            </div>
        </div>
    </div>
</div>

<script>
	$(document).ready(function () {
		$("#dataTable").dataTable();
	});
</script>
<script>
    $(document).ready(function () {
        if ($("#poruka").text() == "1") {
            showSnackBar("@TempData["poruka"]");
        }
    });
</script>
