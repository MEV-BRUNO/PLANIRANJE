@model Planiranje.Models.SSModel

@{
	Layout = null;
}
<div class="modal-dialog">
	<div class="modal-content">
		<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
			<h4 class="modal-title">Uređivanje plana za srednju školu</h4>
		</div>
		@using (Html.BeginForm(null, null, new { @id = string.Empty }, FormMethod.Post, new { @id = "urediPlanSSView", @class = "form-horizontal", role = "form" }))
		{
		<div class="modal-body">
			@Html.ValidationSummary(true, "", new { @class = "text-danger" })
			@Html.HiddenFor(model => model.SS_Plan.Id_plan)
			@Html.HiddenFor(model => model.SS_Plan.Id_pedagog)
            <div class="form-group">
                @Html.Label("Broj","Redni broj",new { @class="control-label col-md-2"})
                <div class="col-md-3">
                    @Html.TextBoxFor(model => model.ID_PLAN, new { @class="form-control", disabled=""})
                </div>
            </div>
			<div class="form-group">
				@Html.LabelFor(model => model.SS_Plan.Naziv, htmlAttributes: new { @class = "control-label col-md-2" })
				<div class="col-md-10">
					@Html.EditorFor(model => model.SS_Plan.Naziv, new { htmlAttributes = new { @class = "form-control" } })
					@Html.ValidationMessageFor(model => model.SS_Plan.Naziv, "", new { @class = "text-danger" })
				</div>
			</div>
            <div class="form-group">
                @Html.LabelFor(model => model.SS_Plan.Ak_godina, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-9">
                    @*@Html.DropDownListFor(model => model.SS_Plan.Ak_godina,Model.SKGodinaItems, new { @class = "form-control" })*@
                    <select class="form-control" data-val="true" data-val-number="The field Ak. godina must be a number." data-val-required="Obavezno polje" id="SS_Plan_Ak_godina" name="SS_Plan.Ak_godina">
                        
                        @foreach(var item in Model.SkGodina)
                        {
                            int godina = item.Sk_Godina + 1;
                            if (item.Sk_Godina == Model.SS_Plan.Ak_godina)
                            {
                                <option selected="selected" value="@item.Sk_Godina">@item.Sk_Godina./@godina.</option>
                            }
                            else
                            {
                            <option value="@item.Sk_Godina">@item.Sk_Godina./@godina.</option>
                            }
                        }
                    </select>
                    @Html.ValidationMessageFor(model => model.SS_Plan.Ak_godina, "", new { @class = "text-danger" })
                </div>
            </div>
			<div class="form-group">
				@Html.LabelFor(model => model.SS_Plan.Opis, htmlAttributes: new { @class = "control-label col-md-2" })
				<div class="col-md-10">
					@Html.TextAreaFor(model => model.SS_Plan.Opis, new { @class = "edit-opis", rows="3" })
					@Html.ValidationMessageFor(model => model.SS_Plan.Opis, "", new { @class = "text-danger" })
				</div>
			</div>
			<div class="modal-footer">
				<div class="form-group">
					<button type="button" class="btn btn-default" data-dismiss="modal">Odustani</button>
					<input type="button" class="btn btn-primary" value="Promijeni" onclick='reload("@Url.Action("Uredi","PlanSs")", "#urediPlanSSView")' />
				</div>
			</div>
		</div>
		}
	</div>
</div>
