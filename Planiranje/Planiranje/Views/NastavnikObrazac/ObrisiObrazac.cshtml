@model Planiranje.Models.Ucenici.Nastavnik_obrazac
@{
    Layout = null;
}

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">Brisanje obrasca za promatranje nastave</h4>
        </div>
        @using (Html.BeginForm(null, null, new { @id = string.Empty }, FormMethod.Post, new { @id = "obrisiObrazac", @class = "form-horizontal", role = "form" }))
        {
            @Html.HiddenFor(model => model.Id)
            <div class="modal-body">
                <p><b>Jeste li sigurni da želite obrisati ovaj obrazac za promatranje nastave?</b></p>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.Id_odjel, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.TextBox("0", ViewBag.nazivOdjela as string, new { @class = "form-control", disabled = "" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Predmet, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.Predmet, new { @class = "form-control", disabled = "" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Supervizor, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.Supervizor, new { @class = "form-control", disabled = "" })
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Odustani</button>
                    <input type="button" class="btn btn-danger" value="Obriši" onclick='zatvoriModal("@Url.Action("ObrisiObrazac","NastavnikObrazac")","#obrisiObrazac","#detalji","Obrazac za promatranje nastave je obrisan")' />
                </div>
            </div>
        }
    </div>
</div>



