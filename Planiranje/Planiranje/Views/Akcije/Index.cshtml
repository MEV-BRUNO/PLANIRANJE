@model Planiranje.Models.AkcijeModel

@{
	Page.Title = ViewBag.Title;
	Layout = Request.IsAjaxRequest() ? null : "~/Views/Shared/_Layout.cshtml";
}

<div class="inner">
	<div class="row">
		<div class="col-lg-12">
			<h3> Pregled akcija </h3>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-12">
			<div class="panel panel-default">
				<div class="panel-body">
					<div class="row">
						<div class="col-lg-2">
							<div class="pull-left">
								<input type="button" class="btn btn-primary btn-md" value="Nova akcija" onclick='showModal("@Url.Action("NovaAkcija", "Akcije")")' />
							</div>
						</div>
					</div>
					<br>
					@Html.Partial("Table", Model)
				</div>
			</div>
		</div>
	</div>
</div>
<script>
	$(document).ready(function () {
		$("#dataTable").dataTable();
	});
</script>
