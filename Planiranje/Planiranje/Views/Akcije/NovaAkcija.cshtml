@model Planiranje.Models.Aktivnost_akcija

@{
	Layout = null;
}
<div class="modal-dialog">
        <div class="modal-content">
                <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 class="modal-title">Nova akcija</h4>
            
        </div>
                @using (Ajax.BeginForm("NovaAkcija", "Akcije", new AjaxOptions
        {
            HttpMethod = "Post",
OnSuccess = "CreateSuccess"
        }, new { @class = "form-horizontal", role = "form" }))
        {
				<div class="modal-body">
					@Html.ValidationSummary(true, "", new { @class = "text-danger" })
					@Html.HiddenFor(model => model.Id_akcija, new { Value = 0 })
					<div class="form-group">
						@Html.LabelFor(model => model.Id_aktivnost, htmlAttributes: new { @class = "control-label col-md-3" })
						<div class="col-md-9">
							@Html.DropDownListFor(model => model.Id_aktivnost, new SelectList(ViewBag.Aktivnosti, "Id_aktivnost", "Naziv"), new { @class = "form-control" })
							@Html.ValidationMessageFor(model => model.Naziv, "", new { @class = "text-danger" })
						</div>
					</div>
					<div class="form-group">
						@Html.LabelFor(model => model.Naziv, htmlAttributes: new { @class = "control-label col-md-3" })
						<div class="col-md-9">
							@Html.EditorFor(model => model.Naziv, new { htmlAttributes = new { @class = "form-control" } })
							@Html.ValidationMessageFor(model => model.Naziv, "", new { @class = "text-danger" })
						</div>
					</div>
					<div class="modal-footer">
						<button type="button" class="btn btn-default" data-dismiss="modal">Odustani</button>
						<input type="submit" class="btn btn-primary" value="Spremi" />
					</div>
				</div>
        }

    </div>
   
</div>
