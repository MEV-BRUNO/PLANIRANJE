@model Planiranje.Models.AkcijeModel

@{
	Layout = null;
}
<div class="modal-dialog">
	<div class="modal-content">
		<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
			<h4 class="modal-title">Nova akcija</h4>
		</div>
		@using (Html.BeginForm(null, null, new { @id = string.Empty }, FormMethod.Post, new { @id = "novaAkcijaView", @class = "form-horizontal", role = "form" }))
		{
			<div class="modal-body">
				@Html.ValidationSummary(true, "", new { @class = "text-danger" })
				@Html.HiddenFor(model => model.akcija.Id_akcija, new { Value = 0 })
				<div class="form-group">
					@Html.LabelFor(model => model.akcija.Id_aktivnost, htmlAttributes: new { @class = "control-label col-md-3" })
					<div class="col-md-9">
						@Html.DropDownListFor(model => model.akcija.Id_aktivnost, new SelectList(Model.aktivnosti, "Id_aktivnost", "Naziv"), new { @class = "form-control" })
						@Html.ValidationMessageFor(model => model.akcija.Id_aktivnost, "", new { @class = "text-danger" })
					</div>
				</div>
				<div class="form-group">
					@Html.LabelFor(model => model.akcija.Naziv, htmlAttributes: new { @class = "control-label col-md-3" })
					<div class="col-md-9">
						@Html.EditorFor(model => model.akcija.Naziv, new { htmlAttributes = new { @class = "form-control" } })
						@Html.ValidationMessageFor(model => model.akcija.Naziv, "", new { @class = "text-danger" })
					</div>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-default" data-dismiss="modal">Odustani</button>
					<input type="button" class="btn btn-primary" value="Spremi" onclick='hideModal("/Akcije/NovaAkcija", "#novaAkcijaView", "Nova akcija je uspješno spremljena")' />
				</div>
			</div>
		}
	</div>
</div>
