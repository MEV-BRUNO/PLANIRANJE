@model Planiranje.Models.Ucenici.PopisUcenikaModel
@{
    Layout = null;
}
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">Uređivanje podataka o učeniku</h4>
        </div>
        @using (Html.BeginForm(null, null, new { @id = string.Empty }, FormMethod.Post, new { @id = "uredi", @class = "form-horizontal", role = "form" }))
        {
            @Html.HiddenFor(model => model.Popis.Id)
            @Html.HiddenFor(model => model.Popis.Id_ucenik_razred)  
            @Html.HiddenFor(model => model.UcenikRazred.Id)
            @Html.HiddenFor(model => model.UcenikRazred.Id_razred)
            <div class="modal-body">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.Popis.Ponavlja_razred, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.RadioButtonFor(model => model.Popis.Ponavlja_razred, 1, new { htmlAttributes = new { @class = "form-control" } }) Da
                        @Html.RadioButtonFor(model => model.Popis.Ponavlja_razred, 2, new { htmlAttributes = new { @class = "form-control" } }) Ne
                        @Html.ValidationMessageFor(model => model.Popis.Ponavlja_razred, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Popis.Putnik, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.RadioButtonFor(model => model.Popis.Putnik, 1, new { htmlAttributes = new { @class = "form-control" } }) Da
                        @Html.RadioButtonFor(model => model.Popis.Putnik, 2, new { htmlAttributes = new { @class = "form-control" } }) Ne
                        @Html.ValidationMessageFor(model => model.Popis.Putnik, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Popis.Zaduzenje, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.Popis.Zaduzenje, new { htmlAttributes = new { @class = "form-control",
                       onkeydown = "provjeriEnter(event,\"/PopisUcenika/UrediPopis\",\"#uredi\",\"#tablica\",\"Promjene su spremljene\")"
                   } })                           
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Odustani</button>
                    <input type="button" class="btn btn-primary" value="Spremi" onclick='zatvoriModal("@Url.Action("UrediPopis","PopisUcenika")","#uredi","#tablica","Promjene su spremljene")' />
                </div>
            </div>
        }
    </div>
</div>

