@model Planiranje.Models.Ucenici.Neposredni_rad
@{
    Layout = null;
}
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">Novi neposredni rad</h4>
        </div>
        @using (Html.BeginForm(null, null, new { @id = string.Empty }, FormMethod.Post, new { @id = "noviRad", @class = "form-horizontal", role = "form" }))
        {
            @Html.HiddenFor(model => model.Id, new { Value=0})
            @Html.HiddenFor(model => model.Id_ucenik_razred, new { Value=ViewBag.id_ucenik_razred})         
            
            <div class="modal-body">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.Datum, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.Datum, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Datum, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Napomena, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.Napomena, new { htmlAttributes = new { @class = "form-control",
                       onkeydown = "provjeriEnter(event,\"/PracenjeUcenika/DodajNeposredniRad\",\"#noviRad\",\"#zapazanja\",\"Novi neposredni rad je spremljen\")"
                   } })
                        @Html.ValidationMessageFor(model => model.Napomena, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Odustani</button>
                    <input type="button" class="btn btn-primary" value="Spremi" onclick='zatvoriModal("@Url.Action("DodajNeposredniRad","PracenjeUcenika")","#noviRad","#zapazanja","Novi neposredni rad je spremljen")' />
                </div>
            </div>
        }
    </div>
</div>