@model Planiranje.Models.Ucenici.PracenjeUcenikaModel
@{
    Layout = null;
}

<div class="panel panel-default">
    <div class="panel-heading">
        <div class="row">
            <form class="form-horizontal">
                <div class="col-lg-3">
                    <div class="form-group">
                        <label class="control-label col-lg-12">Odabrani učenik: @Model.Ucenik.ImePrezime</label>
                    </div>
                </div>
                <div class="col-lg-4">
                </div>
            </form>
        </div><!--END ROW -->
    </div><!--END HEAD -->
    <div class="panel-body">
        <ul class="nav nav-pills">
            <li class="active">
                <a href="#osobni" data-toggle="tab">Osnovni podaci</a>
            </li>
            <li>
                <a href="#obitelj" data-toggle="tab">Obitelj</a>
            </li>
            <li>
                <a href="#razlog" data-toggle="tab">Razlog</a>
            </li>
            <li>
                <a href="#procjena" data-toggle="tab">Procjena</a>
            </li>
            <li>
                <a href="#inicijalni" data-toggle="tab">Uvjeti-Učenje-Vještine</a>
            </li>
            <li>
                <a href="#postignuca" data-toggle="tab">Postignuća</a>
            </li>
            <li>
                <a href="#zapazanja" data-toggle="tab">Neposredni rad</a>
            </li>
            <li>
                <a href="#prijedlog" data-toggle="tab">Zaključak</a>
            </li>
        </ul>

        <div class="tab-content">
            <div class="tab-pane fade in active" id="osobni">
                @*@Html.Partial("OsnovniPodaci", Model)*@
                @{Html.RenderPartial("OsnovniPodaci", Model);}
            </div><!--END osobni podaci -->
            <div class="tab-pane fade" id="obitelj">
                @{Html.RenderPartial("Obitelj", Model);}
            </div><!--END TAB obitelj -->
            <div class="tab-pane fade" id="razlog">
                @{ Html.RenderPartial("Razlog", Model);}
            </div>
            <div class="tab-pane fade" id="procjena">
                @{ Html.RenderPartial("Procjena", Model);}
            </div><!--END TAB procjena -->
            <div class="tab-pane fade" id="inicijalni">
                <form class="form-horizontal">
                    <div class="panel-group" id="accordion2">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h4 class="panel-title">
                                    <a data-toggle="collapse" data-parent="#accordion2" href="#collapse2b">
                                        Socioekononski uvjeti i odgojno-obrazovni utjecaj okružja
                                    </a>
                                </h4>
                            </div>
                            <div id="collapse2b" class="panel-collapse collapse">
                                <div class="panel-body">
                                    <textarea class="form-control" rows="5"></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h4 class="panel-title">
                                    <a data-toggle="collapse" data-parent="#accordion2" href="#collapse3b">
                                        Učenje i sazrevanje
                                    </a>
                                </h4>
                            </div>
                            <div id="collapse3b" class="panel-collapse collapse">
                                <div class="panel-body">
                                    <textarea class="form-control" rows="5"></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h4 class="panel-title">
                                    <a data-toggle="collapse" data-parent="#accordion2" href="#collapse4b">
                                        Socijalne vještine učenika i odnos prema obavezama
                                    </a>
                                </h4>
                            </div>
                            <div id="collapse4b" class="panel-collapse collapse">
                                <div class="panel-body">
                                    <textarea class="form-control" rows="5"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                    <br>

                    <div class="form-group">
                        <button type="submit" class="btn btn-success">Potvrdi</button>
                        <button type="reset" class="btn btn-success">Odustani</button>
                    </div>

                </form>
            </div><!--END TAB inicijalni podaci -->
            <div class="tab-pane fade" id="postignuca">
                <p>
                    <a href="#" class="btn btn-primary btn-xs btn-grad"> Novo postignuće</a>
                </p>
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Šk.godina</th>
                                <th>Razred</th>
                                <th>Napomena</th>
                                <th>Aktivnost</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="col-md-1">2017./2018.</td>
                                <td class="col-md-2">5C</td>
                                <td class="col-md-7">Napomena ........<br>Napomena.......</td>
                                <td class="col-md-2">
                                    <a href="#" class="btn btn-primary btn-xs btn-grad">Uredi</a>
                                    <a href="#" class="btn btn-info btn-xs btn-grad">Info</a>
                                    <a href="#" class="btn btn-danger btn-xs btn-grad">Briši</a>
                                </td>
                            </tr>
                            <tr>
                                <td class="col-md-1">2016./2017.</td>
                                <td class="col-md-2">4C</td>
                                <td class="col-md-7">Napomena ........<br>Napomena.......</td>
                                <td class="col-md-2">
                                    <a href="#" class="btn btn-primary btn-xs btn-grad">Uredi</a>
                                    <a href="#" class="btn btn-info btn-xs btn-grad">Info</a>
                                    <a href="#" class="btn btn-danger btn-xs btn-grad">Briši</a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div> <!--END TAB postignuća -->
            <div class="tab-pane fade" id="zapazanja">
                <p>
                    <a href="#" class="btn btn-primary btn-xs btn-grad"> Novi zapis</a>
                </p>
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Datum</th>
                                <th>Oblici i način rada s učenikom, učiteljima, roditeljima/starateljima i drugima </th>
                                <th>Aktivnost</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="col-md-1">10.12.2017.</td>
                                <td class="col-md-9">Napomena ........<br>Napomena.......</td>
                                <td class="col-md-2">
                                    <a href="#" class="btn btn-primary btn-xs btn-grad">Uredi</a>
                                    <a href="#" class="btn btn-danger btn-xs btn-grad">Briši</a>
                                </td>
                            </tr>
                            <tr>
                                <td class="col-md-1">05.09.2017.</td>
                                <td class="col-md-9">Napomena ........<br>Napomena.......</td>
                                <td class="col-md-2">
                                    <a href="#" class="btn btn-primary btn-xs btn-grad">Uredi</a>
                                    <a href="#" class="btn btn-danger btn-xs btn-grad">Briši</a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div> <!--END TAB zapažanja -->
            <div class="tab-pane fade" id="prijedlog">
                <form class="form-horizontal">

                    <div class="form-group">
                        <label>Završni zaključak praćenja učenika</label>
                        <textarea id="limiter" rows="6" placeholder="Završni zaključak" class="form-control"></textarea>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-success">Potvrdi</button>
                        <button type="reset" class="btn btn-success">Odustani</button>
                    </div>
                </form>
            </div> <!--END TAB zapažanja -->
        </div>
    </div>
</div>
