@model Planiranje.Models.Ucenici.Obitelj
@{
    Layout = null;
}
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">Brisanje člana obitelji</h4>
        </div>        
        @using (Html.BeginForm(null, null, new { @id = string.Empty }, FormMethod.Post, new { @id = "noviClan", @class = "form-horizontal", role = "form" }))
        {
            @Html.HiddenFor(model => model.Id_obitelj)
            @Html.HiddenFor(model => model.Id_ucenik)
            <div class="modal-body">
                <p><b>Jeste li sigurni da želite obrisati ovog člana obitelji?</b></p>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.ImePrezime, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.ImePrezime, new { @class = "form-control", disabled="" } )                        
                    </div>
                </div>                
                <div class="form-group">
                    @Html.LabelFor(model => model.Svojstvo, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.DropDownListFor(model => model.Svojstvo, ViewBag.select as List<SelectListItem>, "Odaberite svojstvo", new { @class = "form-control", disabled="" })
                        @Html.ValidationMessageFor(model => model.Svojstvo, "", new { @class = "text-danger" })
                    </div>
                </div>          
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Odustani</button>
                    <input type="button" class="btn btn-danger" value="Obriši" onclick='zatvoriModal("@Url.Action("ObrisiObitelj","PracenjeUcenika")","#noviClan","#obitelj","Član obitelji je obrisan")' />
                </div>
            </div>
        }
    </div>
</div>