@model Planiranje.Models.Ucenici.PracenjeUcenikaModel
@{
    Layout = null;
}
@using (Html.BeginForm(null, null, new { @id = string.Empty }, FormMethod.Post, new { @id = "osnovniPodaci", @class = "form-horizontal", role = "form" }))
{ 
    @Html.HiddenFor(model=>model.Ucenik.Id_ucenik)
    @Html.HiddenFor(model => model.Razred.Id)
    <div class="row">
        <div class="col-lg-6">
            <div class="form-group">
                <label class="control-label col-lg-4">Razredni odjel:</label>
                <div class="col-lg-6">
                    @Html.DisplayTextFor(model=>model.Razred.Naziv)
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-lg-4">Razrednik:</label>
                <div class="col-lg-6">
                    @Html.DisplayTextFor(model => model.Razrednik.ImePrezime)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model=>model.Ucenik.Datum, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-lg-6">
                    @Html.EditorFor(model=>model.Ucenik.Datum, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <br>
            <div class="form-group">
                <label for="text4" class="control-label col-lg-1"></label>
                <div class="col-lg-6">
                    <button type="button" onclick="potvrdi('@Url.Action("OsnovniPodaci","PracenjeUcenika")','#osnovniPodaci','Spremljeno')" class="btn btn-success">Potvrdi</button>
                    <button type="button" onclick="odustani('@Url.Action("OsnovniPodaci","PracenjeUcenika", new { id=Model.Ucenik.Id_ucenik, razred=Model.Razred.Id})','#osobni')" class="btn btn-success">Odustani</button>
                </div>
            </div>
        </div><!--END COL -->
        <div class="col-lg-6">
            <div class="form-group">
                @Html.LabelFor(model => model.Ucenik.Grad, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-lg-6">
                    @Html.EditorFor(model => model.Ucenik.Grad, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Ucenik.Adresa, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-lg-6">
                    @Html.EditorFor(model => model.Ucenik.Adresa, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.PracenjeUcenika.Pocetak_pracenja, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-lg-6">
                    @Html.EditorFor(model => model.PracenjeUcenika.Pocetak_pracenja, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
        </div><!--END COL -->
    </div><!--END ROW -->
}

