        }
        $("#tablica").empty();
    }
    function promjenaRazreda() {
        var val = $("#selectRazred").val();
        if (val != "0") {
            $.ajax({
                url: '/PracenjeUcenika/OdabirUcenika?razred=' + val,
                success: function (data) {
                    $("#tablica").html(data);
                    $("#dataTable").dataTable();
                }
