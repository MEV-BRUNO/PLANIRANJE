@model Planiranje.Models.Ucenici.Postignuce
@{
    Layout = null;
}
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">Brisanje postignuća</h4>
        </div>
        @using (Html.BeginForm(null, null, new { @id = string.Empty }, FormMethod.Post, new { @id = "obrisiPostignuce", @class = "form-horizontal", role = "form" }))
        {
            @Html.HiddenFor(model => model.Id_postignuce)
            @Html.HiddenFor(model => model.Id_ucenik)
            @Html.HiddenFor(model => model.Id_razred)
            @Html.HiddenFor(model => model.Godina)
            <div class="modal-body">
                <p><b>Jeste li sigurni da želite obrisati ovo postignuće?</b></p>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.Napomena, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.Napomena,new { @class = "form-control", disabled="" })                       
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Odustani</button>
                    <input type="button" class="btn btn-danger" value="Obriši" onclick='zatvoriModal("@Url.Action("ObrisiPostignuce","PracenjeUcenika")","#obrisiPostignuce","#postignuca","Postignuće je obrisano")' />
                </div>
            </div>
        }
    </div>
</div>


