@model Planiranje.Models.Ucenici.PracenjeUcenikaModel
@{
    Layout = null;
}

<p>
    <a onclick="showModal('@Url.Action("DodajPostignuce","PracenjeUcenika",new { razred=Model.Razred.Id, ucenik=Model.Ucenik.Id_ucenik})')" 
       class="btn btn-primary btn-xs btn-grad"> Novo postignuće</a>
</p>
<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover" id="dataTable2">
        <thead>
            <tr>
                <th>Šk.godina</th>
                <th>Razred</th>
                <th>Napomena</th>
                <th>Aktivnost</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Postignuca)
            {
                int godina = item.Godina + 1;
            <tr>
                <td class="col-md-1">@item.Godina./@godina.</td>
                <td class="col-md-2">@item.Razred</td>
                <td class="col-md-7">@item.Napomena</td>
                <td class="col-md-2">
                    <a onclick="showModal('@Url.Action("UrediPostignuce","PracenjeUcenika", new { id=item.Id_postignuce})')" class="btn btn-primary btn-xs btn-grad">Uredi</a>                    
                    <a onclick="showModal('@Url.Action("ObrisiPostignuce","PracenjeUcenika", new { id=item.Id_postignuce})')" class="btn btn-danger btn-xs btn-grad">Obriši</a>
                </td>
            </tr>   
            }
        </tbody>
    </table>
</div>
