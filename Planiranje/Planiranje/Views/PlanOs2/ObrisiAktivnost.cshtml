@model Planiranje.Models.OS_Plan_2_aktivnost
@{
    Layout = null;
}

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">Brisanje zadatka</h4>
        </div>
        @using (Html.BeginForm(null, null, new { @id = string.Empty }, FormMethod.Post, new { @id = "noviPlanModalView", @class = "form-horizontal", role = "form" }))
		{
            <div class="modal-body">
                @Html.HiddenFor(model => model.Id_plan)
                
                <div class="form-group">
                    <div class="col-md-10">
                        <h5>
                            Jeste li sigurni da želite obrisati ovaj zadatak?
                        </h5>
                    </div>
                </div>
                <div class="form-group">
                    @Html.Label("Redni broj", new { @class = "control-label col-md-3" })
                    <div class="col-md-3">
                        @Html.TextBox("broj", ViewBag.pozicija as string, new { @class = "form-control", @disabled = "true" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Opis_aktivnost, new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.TextAreaFor(model => model.Opis_aktivnost, new { @class = "edit-opis", @disabled = "true" })
                    </div>
                </div>                
                <div class="modal-footer">
                    <div class="form-group">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Odustani</button>
                        <input type="button" onclick="zatvoriModal1('@Url.Action("ObrisiAktivnost","PlanOs2")','#noviPlanModalView','#aktivnosti','Zadatak je obrisan')" class="btn btn-danger" value="Obriši" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>

