@model Planiranje.Models.PlanOs2View
@{
    Layout = null;
}

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">Brisanje aktivnosti</h4>
        </div>
        @using (Html.BeginForm(null, null, new { @id = string.Empty }, FormMethod.Post, new { @id = "noviPlanModalView", @class = "form-horizontal", role = "form" }))
		{
            <div class="modal-body">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Pozicija)
                @Html.HiddenFor(m => m.Pozicija2)
                @Html.HiddenFor(m => m.OsPlan2Akcija.Id_aktivnost)
                @Html.HiddenFor(m => m.OsPlan2Akcija.Id_plan)
                @Html.HiddenFor(m => m.OsPlan2Akcija.Red_br_akcija)

                <div class="form-group">
                    @Html.LabelFor(model => model.Broj, new { @class = "control-label col-md-3" })
                    <div class="col-md-3">
                        @Html.TextBoxFor(model => model.Tekst, new { @class = "form-control", @disabled = "true" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.OsPlan2Akcija.Opis_akcija, new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.TextAreaFor(model => model.OsPlan2Akcija.Opis_akcija, new { @class = "edit-opis", @disabled="true" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.OsPlan2Akcija.Sati, new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.OsPlan2Akcija.Sati,  new { @class = "form-control",@disabled="true" })
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Odustani</button>
                    <input type="button" onclick="reload('@Url.Action("ObrisiAktivnost","PlanOs2")','#noviPlanModalView')" class="btn btn-primary" value="Obriši" />
                </div>
            </div>
        }
    </div>
</div>

