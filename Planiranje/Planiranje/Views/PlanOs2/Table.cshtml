@model List<Planiranje.Models.OS_Plan_2>

<table class="table table-bordered table-hover" id="dataTables-example">
    <thead>
        <tr>
            <td class="col-lg-1">
                Id
            </td>
            <td class="col-lg-3">
                Naziv
            </td>
            <td class="col-lg-1">
                Ak. godina
            </td>
            <td class="col-lg-5">
                Opis
            </td>
            <td class="col-lg-3">
                Akcija
            </td>
        </tr>
    </thead>
    <tbody>
        @{ int i = 0;}
        @foreach (var item in Model)
        {
            i++;
        <tr>
            <td>
                @i
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Naziv)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ak_godina)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Opis)
            </td>
            <td>
                <div class="pull-right">
                    <a onclick="location.href='@Url.Action("Details","PlanOs2", new { id=item.Id_plan})'" class="btn btn-success btn-xs">Detalji</a>
                    <a data-toggle="modal" data-url="@Url.Action("Edit","PlanOs2",new { id = item.Id_plan })" id="editAsset" class="btn btn-primary btn-xs ">Uredi</a>
                    <a data-toggle="modal" data-url="@Url.Action("Delete","PlanOs2",new { id = item.Id_plan })" id="deleteAsset" class="btn btn-danger btn-xs ">Obriši</a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
