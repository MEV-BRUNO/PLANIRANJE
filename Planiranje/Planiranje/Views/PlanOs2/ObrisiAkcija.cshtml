@model Planiranje.Models.OS_Plan_2_akcija
@{
    Layout = null;
}

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">Brisanje aktivnosti</h4>
        </div>
        @using (Html.BeginForm(null, null, new { @id = string.Empty }, FormMethod.Post, new { @id = "noviPlanModalView", @class = "form-horizontal", role = "form" }))
		{
            <div class="modal-body">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id_plan)               

                <div class="form-group">
                    <div class="col-md-10">
                        <h5>
                            Jeste li sigurni da želite obrisati ovu aktivnost?
                        </h5>
                    </div>
                </div>
                <div class="form-group">
                    @Html.Label("pozicija", "Redni broj", new { @class = "control-label col-md-3" })
                    <div class="col-md-4">
                        @Html.TextBox("pozicija", ViewBag.pozicija as string, new { @class = "form-control", @disabled = "true" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Opis_akcija, new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.TextAreaFor(model => model.Opis_akcija, new { @class = "edit-opis", @disabled="true" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Sati, new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.Sati,  new { @class = "form-control",@disabled="true" })
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Odustani</button>
                    <input type="button" onclick="zatvoriModal('@Url.Action("ObrisiAkcija","PlanOs2")','#noviPlanModalView','#akcije','Aktivnost je obrisana')" class="btn btn-danger" value="Obriši" />
                </div>
            </div>
        }
    </div>
</div>

