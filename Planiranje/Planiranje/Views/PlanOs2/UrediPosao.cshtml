@model Planiranje.Models.PlanOs2View

@{
    Layout = null;
}


<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">Uređivanje posla</h4>
        </div>
        @using (Ajax.BeginForm("UrediPosao", "PlanOs2", new AjaxOptions
        {
            HttpMethod = "Post",
            OnSuccess = "EditSuccess"
        }, new { @class = "form-horizontal", role = "form" }))
        {
        <div class="modal-body">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Podrucje.Id_plan)

            <div class="form-group">
                @Html.LabelFor(model => model.Podrucje.Opis_podrucje, htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.DropDownListFor(model => model.Podrucje.Opis_podrucje, Model.PodrucjeItems, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Podrucje.Opis_podrucje, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Podrucje.Cilj, htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.DropDownListFor(model => model.Podrucje.Cilj, Model.CiljeviItems, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Podrucje.Cilj, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Podrucje.Zadaci, htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.EditorFor(model => model.Podrucje.Zadaci, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Podrucje.Zadaci, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Podrucje.Subjekti, htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.EditorFor(model => model.Podrucje.Subjekti, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Podrucje.Subjekti, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Podrucje.Oblici, htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.EditorFor(model => model.Podrucje.Oblici, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Podrucje.Oblici, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="modal-footer">
                <div class="form-group">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Odustani</button>
                    <input type="submit" class="btn btn-primary" value="Promijeni" />
                </div>
            </div>
        </div>
        }
    </div>
</div>