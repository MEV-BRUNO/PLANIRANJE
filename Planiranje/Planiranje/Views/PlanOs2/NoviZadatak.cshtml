@model Planiranje.Models.PlanOs2View

@{
    Layout = null;
}

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">Novi zadatak</h4>
        </div>
        @using (Ajax.BeginForm("NoviZadatak", "PlanOs2", new AjaxOptions
        {
            HttpMethod = "Post",
            OnSuccess = "CreateSuccess"
        }, new { @class = "form-horizontal", role = "form" }))
        {
            <div class="modal-body">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Os_Plan_2_Aktivnost.Id_plan, new { Value = 0 })
                @Html.HiddenFor(m => m.Pozicija)
                <div class="form-group">
                    @Html.LabelFor(model => model.Os_Plan_2_Aktivnost.Opis_aktivnost, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.DropDownListFor(model => model.Os_Plan_2_Aktivnost.Opis_aktivnost, Model.ZadaciItems, "Odaberi zadatak", new { @class = "form-control" })
                    </div>
                </div>
                
                </div>
