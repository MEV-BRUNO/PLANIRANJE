@model Planiranje.Models.PlanOs2View
    @{ Layout= Request.IsAjaxRequest() ? null : "~/Views/Shared/_Layout.cshtml";}
<html>
<head>
    <style>
        #snackbar {
            visibility: hidden;
            min-width: 250px;
            margin-left: -125px;
            background-color: #333;
            color: #fff;
            text-align: center;
            border-radius: 2px;
            padding: 16px;
            position: fixed;
            z-index: 1;
            left: 50%;
            bottom: 30px;
            font-size: 17px;
        }

            #snackbar.show {
                visibility: visible;
                -webkit-animation: fadein 0.5s, fadeout 0.5s 2.5s;
                animation: fadein 0.5s, fadeout 0.5s 2.5s;
            }
    </style>
    <script>
        function myFunction() {
            var x = document.getElementById("snackbar");
            x.className = "show";
            setTimeout(function () { x.className = x.className.replace("show", ""); }, 3000);
        }
    </script>    
   
</head>
<body onload="myFunction()">
    @if (TempData["note"] != null)
    {
        <div id="snackbar">@TempData["note"]</div>
    }
    @if (Model.OsPlan2Podrucja.Count == 0)
    {
        <div id="provjeraPodrucje" style="visibility:hidden">1</div>
    }
    <div style="visibility:hidden" id="provjeraPrikaz">@TempData["prikaz"]</div>
    <div class="inner">
        <div class="row">
            <div class="col-lg-12">

            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-lg-10">
                                <h4> Kreiranje godišnjeg plana i programa</h4>
                                <h5> Naziv godišnjeg plana i programa: @Model.OsPlan2.Naziv</h5>
                                <p>
                                    <a onclick="location.href='@Url.Action("Index","PlanOs2")'" class="btn btn-success btn-xs btn-grad">Povratak na popis</a>
                                </p>
                            </div><!--END COL 10-->
                            <div class="col-lg-2">
                                <button class="btn btn-success btn-sm">ISPIS / PDF DOKUMENT</button>
                            </div>
                        </div><!--END ROW -->
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="panel-body">

                                    <ul class="nav nav-pills">
                                        <li class="active">
                                            <a href="#poslovi" data-toggle="tab">Poslovi</a>
                                        </li>
                                        <li>
                                            <a id="zadaciTab" href="#zadaci" data-toggle="tab">Zadatci</a>
                                        </li>
                                        <li>
                                            <a href="#vrijeme" data-toggle="tab">Aktivnosti i sati</a>
                                        </li>
                                    </ul>

                                    <div class="tab-content">
                                        <div class="tab-pane fade in active" id="poslovi">
                                            <div class="row">
                                                <div class="col-lg-12">
                                                    <p>
                                                        <button  onclick="showModal('@Url.Action("NoviPosao","PlanOs2", new { id=Model.OsPlan2.Id_plan})')" class="btn btn-primary btn-xs btn-grad">Dodaj novi posao</button>
                                                    </p>
                                                    <div class="table-responsive">
                                                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                                            <thead>
                                                                <tr>
                                                                    <th>Rb.</th>
                                                                    <th>Poslovi</th>
                                                                    <th>Cilji</th>
                                                                    <th>Zadatci</th>
                                                                    <th>Subjekti</th>
                                                                    <th>Oblici i metode</th>
                                                                    <th>Vrijeme realizacije</th>
                                                                    <th>Pomak</th>
                                                                    <th>Aktivnost</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                @{ int br = 0;}
                                                                @foreach (var item in Model.OsPlan2Podrucja)
                                    {
                                        br++;
                                        <tr>
                                            <td class="col-md-1">@br</td>
                                            <td class="col-md-4">@item.Opis_podrucje</td>
                                            <td class="col-md-1">@Model.Ciljevi.Single(s => s.ID_cilj == item.Cilj).Naziv</td>
                                            <td class="col-md-1">@Model.Zadaci.Single(s => s.ID_zadatak == item.Zadaci).Naziv</td>
                                            <td class="col-md-1">@Model.Subjekti.Single(s => s.ID_subjekt == item.Subjekti).Naziv</td>
                                            <td class="col-md-1">@Model.Oblici.Single(s => s.Id_oblici == item.Oblici).Naziv</td>
                                            <td class="col-md-1">@item.Vrijeme</td>
                                            <td class="col-md-1">
                                                <a onclick="location.href='@Url.Action("PosaoPomakGore","PlanOs2", new { id=item.Id_plan})'" class="btn btn-warning btn-xs btn-grad">Gore</a>
                                                <a onclick="location.href='@Url.Action("PosaoPomakDolje","PlanOs2", new { id=item.Id_plan})'" class="btn btn-warning btn-xs btn-grad">Dolje</a>
                                            </td>
                                            <td class="col-md-1">
                                                <a  onclick="showModal('@Url.Action("UrediPosao","PlanOs2", new { id=item.Id_plan, broj=br})')" class="btn btn-primary btn-xs btn-grad">Uredi</a>
                                                <a  onclick="showModal('@Url.Action("ObrisiPosao","PlanOs2", new { id=item.Id_plan, broj=br})')" class="btn btn-danger btn-xs btn-grad">Obriši</a>
                                            </td>
                                        </tr>
        }
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                </div><!--END COL 12-->
                                            </div>
                                        </div>
                                        <div class="tab-pane fade" id="zadaci">
                                            <div class="row">
                                                <div class="col-lg-2">
                                                    <button id="btnNoviZadatak" onclick="showModal('@Url.Action("NoviZadatak","PlanOs2", new {id=Model.OsPlan2.Id_plan, pozicija = Model.Pozicija})')" class="btn btn-primary btn-xs btn-grad">Dodaj novi zadatak</button>
                                                </div>
                                                <div class="col-lg-10">
                                                    <div class="form-group">
                                                        <label class="control-label col-lg-2">Odaberi posla iz god. plana:</label>
                                                        <div class="col-lg-7">
                                                            <select onchange="promjenaPosao()" id="selectPosao" class="form-control">
                                                                @{ int a = 0;}
                                                                @foreach(var posao in Model.OsPlan2Podrucja)
                                                                {
                                                                    a++;
                                                                    if (a - 1 == Model.Pozicija)
                                                                    {
                                                                        <option selected="selected">@a. @posao.Opis_podrucje</option>
                                                                    }
                                                                    else
                                                                    {
                                                                        a--;
                                                                        <option value="@a">
                                                                        @{a++;}
                                                                         @a. @posao.Opis_podrucje</option>
                                                                        
                                                                    }
                                                                }
                                                            </select>
                                                        </div>
                                                    </div>
                                                </div><!--END COL 10-->
                                            </div>
                                            <br>
                                            <div class="row">
                                                <div class="col-lg-12">
                                                    <div class="table-responsive">
                                                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                                            <thead>
                                                                <tr>
                                                                    <th>Rb.</th>
                                                                    <th>Naziv zadatka</th>
                                                                    <th>Pomak</th>
                                                                    <th>Aktivnost</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                @{ int b = 0;int ab = Model.Pozicija+1;}
                                                                @foreach (var zadatak in Model.OsPlan2Aktivnosti)
                                                                {
                                                                    b++;
                                                                <tr>
                                                                    <td class="col-md-1">@ab.@b</td>
                                                                    <td class="col-md-7">@zadatak.Opis_aktivnost</td>
                                                                    <td class="col-md-2">
                                                                        <a onclick="location.href='@Url.Action("ZadatakPomakGore","PlanOs2", new { id=zadatak.Id_plan, pozicija=Model.Pozicija})'" class="btn btn-warning btn-xs btn-grad">Gore</a>
                                                                        <a onclick="location.href='@Url.Action("ZadatakPomakDolje","PlanOs2", new { id=zadatak.Id_plan, pozicija=Model.Pozicija})'" class="btn btn-warning btn-xs btn-grad">Dolje</a>
                                                                    </td>
                                                                    <td class="col-md-2">
                                                                        <a href="#" class="btn btn-primary btn-xs btn-grad">Uredi</a>
                                                                        <a href="#" class="btn btn-danger btn-xs btn-grad">Obriši</a>
                                                                    </td>
                                                                </tr>
                                                                }
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                </div><!--END COL 12-->
                                            </div>
                                        </div>
                                        <div class="tab-pane fade" id="vrijeme">
                                            <div class="row">
                                                <div class="col-lg-2">
                                                    <a href="#" class="btn btn-primary btn-xs btn-grad">Dodaj novu aktivnost</a>
                                                </div>
                                                <div class="col-lg-10">
                                                    <div class="form-group">
                                                        <label class="control-label col-lg-2">Odabri zadatka iz god. plana:</label>
                                                        <div class="col-lg-7">
                                                            <select class="form-control">
                                                                <option>1.1 Zadatak</option>
                                                                <option>2.1 Zadatak sss</option>
                                                                <option>2.2 Zadatak mmm</option>
                                                            </select>
                                                        </div>
                                                    </div>
                                                </div><!--END COL 10-->
                                            </div>
                                            <br>
                                            <div class="row">
                                                <div class="col-lg-12">
                                                    <div class="table-responsive">
                                                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                                            <thead>
                                                                <tr>
                                                                    <th>Rb.</th>
                                                                    <th>Naziv aktivnosti</th>
                                                                    <th>Sati</th>
                                                                    <th>Pomak</th>
                                                                    <th>Aktivnost</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                <tr>
                                                                    <td class="col-md-1">1.1.1</td>
                                                                    <td class="col-md-8">Aktivnost A</td>
                                                                    <td class="col-md-1">15</td>
                                                                    <td class="col-md-1">
                                                                        <a href="#" class="btn btn-warning btn-xs btn-grad">Gore</a>
                                                                        <a href="#" class="btn btn-warning btn-xs btn-grad">Dolje</a>
                                                                    </td>
                                                                    <td class="col-md-1">
                                                                        <a href="#" class="btn btn-primary btn-xs btn-grad">Uredi</a>
                                                                        <a href="#" class="btn btn-danger btn-xs btn-grad">Briši</a>
                                                                    </td>
                                                                </tr>
                                                                <tr>
                                                                    <td class="col-md-1">1.1.2</td>
                                                                    <td class="col-md-8">Aktivnost B</td>
                                                                    <td class="col-md-1">15</td>
                                                                    <td class="col-md-1">
                                                                        <a href="#" class="btn btn-warning btn-xs btn-grad">Gore</a>
                                                                        <a href="#" class="btn btn-warning btn-xs btn-grad">Dolje</a>
                                                                    </td>
                                                                    <td class="col-md-1">
                                                                        <a href="#" class="btn btn-primary btn-xs btn-grad">Uredi</a>
                                                                        <a href="#" class="btn btn-danger btn-xs btn-grad">Briši</a>
                                                                    </td>
                                                                </tr>
                                                                <tr>
                                                                    <td class="col-md-1">1.1.3</td>
                                                                    <td class="col-md-8">Aktivnost C</td>
                                                                    <td class="col-md-1">15</td>
                                                                    <td class="col-md-1">
                                                                        <a href="#" class="btn btn-warning btn-xs btn-grad">Gore</a>
                                                                        <a href="#" class="btn btn-warning btn-xs btn-grad">Dolje</a>
                                                                    </td>
                                                                    <td class="col-md-1">
                                                                        <a href="#" class="btn btn-primary btn-xs btn-grad">Uredi</a>
                                                                        <a href="#" class="btn btn-danger btn-xs btn-grad">Briši</a>
                                                                    </td>
                                                                </tr>
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                </div><!--END COL 12-->
                                            </div>
                                        </div>
                                    </div>
                                </div><!--END nav-pills -->
                                <div class="modal fade" id="assetModal" tabindex="-1" role="dialog" aria-labelledby="assetModal" aria-hidden="true" data-backdrop="static">
                                    <div id="assetContainer"></div>
                                </div>
                            </div><!--END BODY -->
                        </div><!--END col 12 -->
                    </div> <!--END row -->
                </div>
            </div>

        </div>

    </div>
    <div style="visibility:hidden" id="idPlan">@Model.OsPlan2.Id_plan</div>

  <script>
      function promjenaPosao() {
          var val = $("#selectPosao").val();
          var id = $("#idPlan").text();
          $.ajax({
              url: '/PlanOs2/Details/' + id + '?pA=' + val,
              success: function (data) {
                  $("#content").html(data);
              }
          });
      }
  </script>

    <script>
        $(document).ready(function () {
            $('#dataTables-example').dataTable();
        });
    </script>
    <script>
        $(document).ready(function () {
            var sadrzaj = $("#provjeraPrikaz").text();
            if (sadrzaj == "1") {
                $("#zadaciTab").click();
            }
            if ($("#provjeraPodrucje").text() == "1") {
                $("#btnNoviZadatak").prop("disabled", true);
            }
            
        });
    </script>    
    
</body>
</html>