@model Planiranje.Models.PlanOs2View
@{
    Layout = null;
}
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">Novi posao</h4>
        </div>
       @using (Html.BeginForm(null, null, new { @id = string.Empty }, FormMethod.Post, new { @id = "noviPlanModalView", @class = "form-horizontal", role = "form" }))
		{
        <div class="modal-body">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.OsPlan2Podrucje.Id_plan, new { Value = 0 })
            @Html.HiddenFor(m => m.OsPlan2.Id_plan)
            @Html.HiddenFor(m => m.OsPlan2.Id_pedagog)
            <div class="form-group">
                @Html.LabelFor(model => model.OsPlan2Podrucje.Opis_podrucje, htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.TextAreaFor(model => model.OsPlan2Podrucje.Opis_podrucje, new { @class = "edit-opis" })
                    @Html.ValidationMessageFor(model => model.OsPlan2Podrucje.Opis_podrucje, "", new { @class = "text-danger" })
                </div>
            </div>
            <!--CILJEVI-->
            <div class="form-group">
                <div class="col-lg-12">
                    @Html.LabelFor(model => model.OsPlan2Podrucje.Cilj)
                </div>
                <div class="col-lg-7">
                    <div class="form-group">
                        <div class="col-lg-12">
                            @Html.TextAreaFor(model => model.OsPlan2Podrucje.Cilj, new { @class = "edit-text-area", id = "ciljeviText", @required = "" })
                            @Html.ValidationMessageFor(model => model.OsPlan2Podrucje.Cilj, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="col-lg-5">
                    <div class="form-group">
                        <div class="col-lg-12">
                            @Html.DropDownList("Ciljevi", Model.CiljeviItems, "--Odaberi ciljeve--", new { @class = "form-control", id = "ciljeviList" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <input type="button" class="btn btn-primary" style="width:100%;" onclick='appendText("ciljeviList", "ciljeviText")' value="Dodaj" />
                    </div>
                </div>
            </div>
            <!--//CILJEVI-->
            <!--ZADACI-->
            <div class="form-group">
                <div class="col-lg-12">
                    @Html.LabelFor(model => model.OsPlan2Podrucje.Zadaci)
                </div>
                <div class="col-lg-7">
                    <div class="form-group">
                        <div class="col-lg-12">
                            @Html.TextAreaFor(model => model.OsPlan2Podrucje.Zadaci, new { @class = "edit-text-area", id = "zadaciText", @required = "" })
                            @Html.ValidationMessageFor(model => model.OsPlan2Podrucje.Zadaci, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="col-lg-5">
                    <div class="form-group">
                        <div class="col-lg-12">
                            @Html.DropDownList("Zadaci", Model.ZadaciItems, "--Odaberi zadatke--", new { @class = "form-control", id = "zadaciList" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <input type="button" class="btn btn-primary" style="width:100%;" onclick='appendText("zadaciList", "zadaciText")' value="Dodaj" />
                    </div>
                </div>
            </div>
            <!--//ZADACI-->
            <!--SUBJEKTI-->
            <div class="form-group">
                <div class="col-lg-12">
                    @Html.LabelFor(model => model.OsPlan2Podrucje.Subjekti)
                </div>
                <div class="col-lg-7">
                    <div class="form-group">
                        <div class="col-lg-12">
                            @Html.TextAreaFor(model => model.OsPlan2Podrucje.Subjekti, new { @class = "edit-text-area", id = "subjektiText", @required = "" })
                            @Html.ValidationMessageFor(model => model.OsPlan2Podrucje.Subjekti, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="col-lg-5">
                    <div class="form-group">
                        <div class="col-lg-12">
                            @Html.DropDownList("Subjekti", Model.SubjektiItems, "--Odaberi subjekte--", new { @class = "form-control", id = "subjektiList" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <input type="button" class="btn btn-primary" style="width:100%;" onclick='appendText("subjektiList", "subjektiText")' value="Dodaj" />
                    </div>
                </div>
            </div>
            <!--//SUBJEKTI-->
            <!--OBLICI-->
            <div class="form-group">
                <div class="col-lg-12">
                    @Html.LabelFor(model => model.OsPlan2Podrucje.Oblici)
                </div>
                <div class="col-lg-7">
                    <div class="form-group">
                        <div class="col-lg-12">
                            @Html.TextAreaFor(model => model.OsPlan2Podrucje.Oblici, new { @class = "edit-text-area", id = "obliciText", @required = "" })
                            @Html.ValidationMessageFor(model => model.OsPlan2Podrucje.Oblici, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="col-lg-5">
                    <div class="form-group">
                        <div class="col-lg-12">
                            @Html.DropDownList("Oblici", Model.ObliciItems, "--Odaberi oblike--", new { @class = "form-control", id = "obliciList" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <input type="button" class="btn btn-primary" style="width:100%;" onclick='appendText("obliciList", "obliciText")' value="Dodaj" />
                    </div>
                </div>
            </div>
            <!--//OBLICI-->
            <div class="form-group">
                @Html.LabelFor(model => model.OsPlan2Podrucje.Vrijeme, htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.EditorFor(model => model.OsPlan2Podrucje.Vrijeme, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.OsPlan2Podrucje.Vrijeme, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Odustani</button>
                <input type="button" onclick="reload('@Url.Action("NoviPosao","PlanOs2")','#noviPlanModalView')" class="btn btn-primary" value="Spremi" />
            </div>
        </div>
        }
    </div>
</div>
