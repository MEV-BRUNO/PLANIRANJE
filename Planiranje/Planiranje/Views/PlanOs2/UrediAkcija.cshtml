@model Planiranje.Models.OS_Plan_2_akcija
@{
    Layout = null;
}

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">Uređivanje aktivnosti</h4>
        </div>
        @using (Html.BeginForm(null, null, new { @id = string.Empty }, FormMethod.Post, new { @id = "noviPlanModalView", @class = "form-horizontal", role = "form" }))
		{
        <div class="modal-body">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id_plan)
            @Html.HiddenFor(model => model.Red_br_akcija)  
            @Html.HiddenFor(model => model.Id_aktivnost)

            <div class="form-group">
                @Html.Label("pozicija", "Redni broj", new { @class = "control-label col-md-3" })
                <div class="col-md-4">
                    @Html.TextBox("pozicija", ViewBag.pozicija as string, new { @class = "form-control", @disabled = "true" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Opis_akcija, new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.TextAreaFor(model => model.Opis_akcija, new { @class = "edit-opis", @rows = "3" })
                    @Html.ValidationMessageFor(model => model.Opis_akcija, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Sati, new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.EditorFor(model => model.Sati, new { htmlAttributes = new { @class = "form-control", @min = "0" } })
                    @Html.ValidationMessageFor(model => model.Sati, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Odustani</button>
                <input type="button" onclick="zatvoriModal('@Url.Action("UrediAkcija","PlanOs2")','#noviPlanModalView','#akcije','Aktivnost je promijenjena')" class="btn btn-primary" value="Promijeni" />
            </div>
        </div>
        }
    </div>
</div>

