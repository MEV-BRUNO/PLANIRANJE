@model Planiranje.Models.PlanOs2View
@{
    Layout = null;
}

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">Brisanje posla</h4>
        </div>
        @using (Html.BeginForm(null, null, new { @id = string.Empty }, FormMethod.Post, new { @id = "noviPlanModalView", @class = "form-horizontal", role = "form" }))
		{
            <div class="modal-body">
                @Html.HiddenFor(model => model.OsPlan2Podrucje.Id_plan)
                @Html.HiddenFor(model=>model.OsPlan2Podrucje.Id_glavni_plan)
                <div class="form-group">
                    <div class="col-md-10">
                        <h5>
                            Jeste li sigurni da želite obrisati ovaj posao?
                        </h5>
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Broj, new { @class = "control-label col-md-3" })
                    <div class="col-md-3">
                        @Html.TextBoxFor(m => m.Broj, new { @class = "form-control", @disabled = "true" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.OsPlan2Podrucje.Opis_podrucje,  new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.TextAreaFor(model => model.OsPlan2Podrucje.Opis_podrucje, new { @class = "edit-opis", @disabled = "true", @rows="3" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.OsPlan2Podrucje.Cilj, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.TextAreaFor(model => model.OsPlan2Podrucje.Cilj, new { @class = "edit-opis", @disabled = "true", @rows="3" })
                    </div>
                </div>                
                <div class="modal-footer">
                    <div class="form-group">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Odustani</button>
                        <input type="button" onclick="reload('@Url.Action("ObrisiPosao","PlanOs2")','#noviPlanModalView')" class="btn btn-danger" value="Obriši" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>
