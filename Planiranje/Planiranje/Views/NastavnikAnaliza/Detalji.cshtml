@model List<Planiranje.Models.Ucenici.Nastavnik_analiza>

@using Planiranje.Models.Ucenici
@{
    Layout = null;
}
<p></p>
<div class="panel-body">
    <div class="row">
        <div class="col-lg-12">
            <div class="table-responsive">
                <div class="col-lg-10">
                    <div class="col-lg-2">
                        <p>                            
                            <a onclick="showModal('@Url.Action("NovaAnaliza","NastavnikAnaliza",new { })')" class="btn btn-primary btn-xs btn-grad">Nova analiza</a>
                        </p>
                    </div>
                    <b>Odabrani nastavnik:</b> @{ Nastavnik nas = ViewBag.nastavnik as Nastavnik;}@nas.ImePrezime
                </div>

                <table class="table table-striped table-bordered table-hover" id="dataTable">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Razredni odjel</th>
                            <th>Datum</th>
                            <th>Aktivnost</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ int brojac = 0;                            
                        }
                        @foreach (var item in Model)
                        {
                            brojac++;                            
                            
                            <tr>
                                <td class="col-md-1">@brojac</td>
                                <td class="col-md-3">@item.Odjel</td>
                                <td class="col-md-6">@item.Datum.ToShortDateString()</td>
                                <td class="col-md-2">
                                    <a target="_blank" href="@Url.Action("Ispis","NastavnikAnaliza",new { id=item.Id})" class="btn btn-info btn-xs btn-grad">Ispis</a>
                                    <a onclick="showModal('@Url.Action("NoviUgovor","NastavnikAnaliza",new { id=item.Id})')" class="btn btn-primary btn-xs btn-grad">Uredi</a>
                                    <a onclick="showModal('@Url.Action("ObrisiUgovor","NastavnikAnaliza", new { id=item.Id})')" class="btn btn-danger btn-xs btn-grad">Obriši</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div><!--END COL 12 -->
    </div>
</div>

